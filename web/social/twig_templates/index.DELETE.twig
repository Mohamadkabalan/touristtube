                                <li><span class="mediaInfoYellow">{{ photo.like_value|raw }}</span><br>{{ photo.like_value_str|raw }}</li>
                                <li><span class="mediaInfoYellow">{{ photo.nb_comments|raw }}</span><br>{{ photo.nb_comments_str|raw }}</li>
                                <li><span class="mediaInfoYellow">{{ photo.nb_shares|raw }}</span><br>{{ photo.nb_shares_str|raw }}</li>
