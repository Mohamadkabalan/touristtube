<body>
    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
        {{displayTopHead}}
        {% set k = 0 %}
        {% for Arr in array4loop %}
            {% set count = Arr|length %}
            {% if count > 0 %}
                {{displayPartHead[k]}}
                {% set first = 0 %}
                <tr>
                    <td>
                        <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                            <tr>
                                <td width="46"></td>
                                <td>
                                    <table width="552" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                                        {% for p in 0..count %}
                                            <tr>
                                                <td height="20"  width="552"></td>
                                            </tr>
                                            <tr>
                                                <td  width="552">{{Arr[p]['partTitle']}}</td>
                                            </tr>
                                            <tr  height="26" >
                                                <td height="26"  width="552"></td>
                                            </tr>
                                            {% if Arr[p]['mediaType'] is not null and Arr[p]['mediaType'] is not empty %}
                                                <tr>
                                                    <td width="552"> 
                                                        {% if Arr[p]['post_text'] is not null and Arr[p]['post_text'] is not empty %}
                                                            <strong>
                                                                <font face="Arial, Helvetica, sans-serif" size="2" color="#e9c21b">
                                                                {{Arr[p]['mediaType']}}
                                                                </font>
                                                            </strong>

                                                            <table cellpadding="0" cellspacing="0">
                                                                <tr><td height="6" colspan="3"></td></tr>
                                                                <tr>

                                                                    <td>
                                                                     {% if Arr[p]['post_pic'] is not empty %}
                                                                        <img width="136" height="76" src="{{Arr[p]['post_pic']}}" />
                                                                     {% endif %}
                                                                    </td>
                                                                    <td width="2"></td>
                                                                    {% if Arr[p]['post_location'] is not empty %}
                                                                    <td width="242" height="76" bgcolor="#ededed" align="center" valign="middle">
                                                                        <img width="242" height="76" src="{{link_path}}locatione.jpg" />
                                                                    </td>
                                                                     {% endif %}
                                                                </tr>
                                                            </table>
                                                            <table cellpadding="0" cellspacing="0">
                                                                {% if Arr[p]['post_location'] is not empty %}
                                                                    <tr>
                                                                        <td height="7"></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                                                                <strong>{{ Arr[p]['post_location']|raw }}</strong>
                                                                            </font>
                                                                       </td>
                                                                    </tr>
                                                                {% endif %}
                                                                {% if Arr[p]['post_text'] is not empty %}
                                                                    <tr>
                                                                        <td>
                                                                            <font face="Arial, Helvetica, sans-serif" size="2" color="#777777">
                                                                                {{ Arr[p]['post_text']|raw }}
                                                                            </font>
                                                                            </td>
                                                                    </tr>
                                                                {% endif %}
                                                                {% if Arr[p]['post_link'] is not empty %}
                                                                    <tr>
                                                                        <td>
                                                                            <strong>{{ Arr[p]['post_link']|raw }}</strong>
                                                                        </td>
                                                                    </tr>
                                                                {% endif %}
                                                            </table>
                                                        {% elseif Arr[p]['post_pic'] is not null and Arr[p]['post_pic'] is not empty %}
                                                                <table width="552"  height="76" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                                                                    <tr height="10">
                                                                        <td width="55"></td>
                                                                        <td width="497"  height="76" rowspan="2">
                                                                            <img src="{{Arr[p]['post_pic']}}" alt="" width="136" height="76"/>
                                                                        </td>
                                                                    </tr>
                                                                    <tr height="67">
                                                                        <td width="55" valign="top">
                                                                            <strong>
                                                                                <font face="Arial, Helvetica, sans-serif" size="2" color="#e9c21b">
                                                                                {{Arr[p]['mediaType']}}
                                                                                </font>
                                                                            </strong>
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            {% endif %}
                                                    </td>
                                                </tr>
                                                <tr  height="26" >
                                                    <td height="26"  width="552"></td>
                                                </tr>
                                            {% endif %}

                                            {% if Arr[p].case == 1  %}
                                                <tr height="51">
                                                    <td height="51"  width="552">
                                                        <table width="552" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                                                            <tr>
                                                                <td rowspan="2" width="51" height="51">
                                                                    <a href="{{Arr[p]['friends'][0][5]}}" target="_blank"><img src="{{Arr[p]['friends'][0][0]}}" alt="{{Arr[p]['friends'][0][1]}}" 
                                                                         border="0" width="51" height="51"/></a>
                                                                </td>
                                                                <td width="6" rowspan="2"></td>
                                                                <td valign="top" width="438" height="13">
                                                                    <a href="{{Arr[p]['friends'][0][5]}}" target="_blank"><font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                                                    {{Arr[p]['friends'][0][1]}}</a>
                                                                    </font>
                                                                </td>
                                                                <td width="56" rowspan="2"></td>
                                                            </tr>
                                                            <tr>
                                                                <td valign="bottom" width="438" height="37">
                                                                    <font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                                                    {{Arr[p]['friendComment']}}
                                                                    </font>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr height="21">
                                                    <td height="21"  width="552"></td>
                                                </tr>
                                            {% elseif Arr[p]['case'] == 2 %}
                                                {{displayFriends[p]}}
                                            {% endif %}
                                            {% if p < (count-1) %}
                                                <tr height="1">
                                                    <td height="1"  width="552" background="{{link_path}}separator.jpg"></td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </table>
                                </td>
                                <td width="37"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td height="3" bgcolor="#FFFFFF" width="633">
                        <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" height="3">
                            <tr>
                                <td width="595" bgcolor="#E0E0E0" height="3"></td>
                                <td></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endif %}
            {% set k = k+1 %}
        {% endfor %}
        {{displayfoot}}
    </table>
</body>