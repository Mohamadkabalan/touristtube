{# empty Twig template #}
<body>
    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
        {{displayTopHead}}
        {% if Arr|length >0 %}
            {{displayPartHeadProfileMentioned}}
            <tr>
                <td>
                    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                        <tr>
                            <td width="46"></td>
                            <td>
                                <table width="552" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                                    {% for p in 0..Arr %}
                                        {% if Arr[p].friendComment|length > 5 %}
                                        <tr>
                                            <td height="20"  width="552"></td>
                                        </tr>
                                        <tr>
                                            <td  width="552">{{Arr[p].partTitle}}
                                            </td>
                                        </tr>
                                        <tr height="30">
                                            <td height="30"  width="552"></td>
                                        </tr>
                                        <tr height="76" width="552">
                                            <td height="76" width="552">
                                                <table width="552" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                                                    <tr><td width="136" height="76">
                                                            <a id="flagg" href="{{Arr[p].eventImg[2]}}" target="_blank">
                                                                <img src="{{Arr[p].eventImg[0]}}" alt="{{Arr[p].eventImg[1]}}" 
                                                                     width="136" height="76" /></a></td>
                                                        <td width="10" height="76">
                                                            <img src="{{link_path}}email-desc-symb.jpg" alt="" width="10" height="77"/></td>
                                                        <td width="330" height="76" bgcolor="#000000">
                                                            <table width="330" height="76" border="0" cellspacing="0" cellpadding="0" bgcolor="#000000">
                                                                <tr height="76">
                                                                    <td width="6" height="76"></td>
                                                                    <td width="324" height="76">
                                                                        <strong><font face="Arial, Helvetica, sans-serif" size="2" color="#eac31a">{{Arr[p].eventDetails[0]}}</font> 
                                                                            <img src="{{link_path}}email-time-symb.png" alt="" /> 
                                                                            <font face="Arial, Helvetica, sans-serif" size="2" color="#afafaf">{{Arr[p].eventDetails[1]}}<br /></strong>
                                                                        <strong><font face="Arial, Helvetica, sans-serif" size="2" color="#afafaf">location: {{Arr[p].eventDetails[2]}}</font><br /></strong>
                                                                        <strong><font face="Arial, Helvetica, sans-serif" size="2" color="#ffffff">{{Arr[p].eventDetails[3]}}</font><br /></strong>
                                                                        <strong><font face="Arial, Helvetica, sans-serif" size="2" color="#eac31a">joining: {{Arr[p].eventDetails[4]}} guests</font></strong>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                        <td width="76" height="76"></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr height="18">
                                            <td height="30"  width="552"></td>
                                        </tr>
                                        <tr height="11">
                                            <td height="11"  width="552">
                                                <font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                                    {{Arr[p].friendComment}}
                                                </font></td>
                                        </tr>
                                        <tr height="24">
                                            <td height="24"  width="552"></td>
                                        </tr>
                                        {% set count= Arr|length-1 %}
                                        {% if p < count %}
                                            <tr height="1">
                                                <td height="1"  width="552" background="separator.jpg"></td>
                                            </tr>
                                        {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                </table>
                            </td>
                            <td width="37"></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td height="3" bgcolor="#FFFFFF" width="633">
                    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" height="3">
                        <tr>
                            <td width="595" bgcolor="#E0E0E0" height="3"></td>
                            <td></td>
                        </tr>
                    </table>
                </td>
            </tr>
        {% endif %}
        {{displayfoot}}
    </table>
</body>