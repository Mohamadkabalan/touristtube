<body>
    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
        <tr>
            <td>
                <table width="633" height="52" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
                    {{displayTopHead|raw}}
                    
                    
                                {% set first = 1 %}
                                {% set last = 0 %}

        {% for k,Arr in array4loop %}
            {% set count = Arr|length %}
            {% if count > 0 %}
                {{displayPartHeadNetwork[k]|raw}}
                
                 {% set first = 0 %}
                 {% set last = last+1 %}
                    {% for p in 0..count %}
                        {% if Arr[p]['case'] == 1 %}
                            <tr>
                                <td height="12"  width="552">
                                    <strong>
                                        <font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                        new {{Arr[p]['mediaTitle']}}</font>
                                        <font face="Arial, Helvetica, sans-serif" size="2" color="#e9c21b"> ({{Arr[p]['Nb']}})</font>
                                    </strong>
                                </td>
                            </tr>
                            <tr  height="7">
                                <td height="7"  width="552"></td>
                            </tr>
                        {% endif %}
                        {% if Arr[p]['case'] == 2 %}
                                <tr>
                                <td height="12"  width="552">
                                    <strong>
                                        <font face="Arial, Helvetica, sans-serif" size="2" color="#000000">
                                        tubers who are no more on your {{Arr[p]['mediaTitle']|raw}} list 
                                        </font>
                                        <font face="Arial, Helvetica, sans-serif" size="2" color="#e9c21b">
                                        ({{Arr[p]['Nb']|raw}})
                                        </font>
                                    </strong>
                                </td>
                            </tr>
                            <tr  height="7">
                                <td height="7"  width="552"></td>
                            </tr>
                        {% endif %}
                        {{displayFriendsNetwork[k][p]|raw}}
                        
                        {% if p < (count-1) %}
                                <tr height="1">
                                    <td height="1"  width="552" background="{{link_path}}separator.jpg"></td>
                                </tr>
                                <tr height="20">
                                    <td height="20"  width="552"></td>
                                </tr>
                        {% endif %}
                    {% endfor %}
                
                    {% if last == array4loop|length %}
                        <tr>
                        <td  width="552">
                        <a href="{{ch_link}}" target="_blank">
                            <strong>
                                <font face="Arial, Helvetica, sans-serif" size="1" color="#e9c21b">go to my channel</font>
                            </strong>
                        </a>
                        </td>
                        </tr>
                        <tr height="37">
                        <td height="20"  width="552"></td>
                        </tr>
                    {% endif %}

                </table>
                            </td>
                            <td width="37"></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td height="3" bgcolor="#FFFFFF" width="633">
                    <table width="633" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" height="3">
                        <tr>
                            <td width="595" bgcolor="#E0E0E0" height="3"></td>
                            <td></td>
                        </tr>
                    </table>
                </td>
            </tr>
            {% endif %}
        {% endfor %}
    {{displayfoot|raw}}                
    </table>
