server {
        root /vagrant;
        index master.php;

        # Make site accessible from http://localhost/
        server_name tt.com;

        location / {
                try_files $uri $uri/ /master.php;
        }

        location ~ \.php$ {
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass 127.0.0.1:9000;
                # With php5-fpm:
                #fastcgi_pass unix:/var/run/php5-fpm.sock;
                fastcgi_index master.php;
                include fastcgi_params;
                fastcgi_param ENVIRONMENT vagrant;
		}
}


