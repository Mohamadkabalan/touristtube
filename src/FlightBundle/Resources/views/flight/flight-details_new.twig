{% extends 'baseFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/flights/css/flight-details_new.css")|raw }}">

{% endblock %}
{% block pagenewjs %}
{% endblock %}
{% block title %}
    {{ 'Flight Details'|trans }}{{ ' | TouristTube' }}
{% endblock %}
{% block body %}
    <section class="container main_flight_container">
        <div class="row margin_top_30">
            <div class="col-xs-12">
                <h1 class="search_title"><span class="circlimg_arrow"><i
                                class="fas fa-angle-right"></i></span>{{ 'Flight details'|trans }}</h1>
            </div>
        </div>

        {{ include('@Flight/flight/flight-steps-bar.twig', { 'step': 5 }) }}

        {% if isFlightDetailsValidFromPayment == false %}
            <br/>
            <p>{{ 'Sorry, We cannot issue ticket for some reasons.'|trans }}</p>
            <p>{{ 'Kindly Contact: '|trans }} <a href="mailto:flights-support@touristtube.com">flights-support@touristtube.com</a>
            </p>
        {% else %}
            <div class="row">
                <div class="col-xs-12">
                    <div class="row no-margin">
                        {% if flight.leaving is defined %}
                            <div class="col-md-6 col-xs-12 nopad margin_top_30">
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        <img class="airplane_flights_style"
                                             src="{{ generateMediaURL('/media/images/flight-details_new/dep_airplane.png') }}"
                                             alt="dep_airplane">
                                        <div class="blue_border_6"></div>
                                    </div>
                                </div>
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        <h2 class="font-27 black margin_top_7">{{ 'Departure'|trans }}</h2>
                                    </div>
                                </div>
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        <p class="font-17 font-bold black">{{ flight.leaving.raw_departure_main_date|date('D d M') }}
                                            <span class="separator_point_class">.</span><span
                                                    class="font-14 font-normal">{{ flight.leaving.main_airline|raw }}</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        {% if flight.leaving.flight_info is iterable %}
                                            {% for flight_info in flight.leaving.flight_info %}
                                                {% if flight_info.stop_info is defined and flight_info.stop_info is iterable %}
                                                    {% set duration = flight_info.raw_duration %}
                                                    {% set type = '' %}
                                                {% else %}
                                                    {% set duration = flight_info.flight_duration %}
                                                    {% set type = 'direct'|trans %}
                                                {% endif %}

                                                {% if origin_airport_code is defined and origin_airport_code != flight_info.origin_airport_code %}

                                                    <div class="row">

                                                        <div class="row no-margin">
                                                            <div class="col-xs-12 nopad">
                                                                <img class="airplane_flights_style"
                                                                     src="/media/images/flight-details_new/dep_airplane.png"
                                                                     alt="dep_airplane">
                                                                <div class="blue_border_6"></div>
                                                            </div>
                                                        </div>
                                                        <div class="row no-margin">
                                                            <div class="col-xs-12 nopad">
                                                                <h2 class="font-27 black margin_top_7">{{ 'Departure'|trans }}</h2>
                                                            </div>
                                                        </div>
                                                        <div class="row no-margin">
                                                            <div class="col-xs-12 nopad">
                                                                <p class="font-17 font-bold black">{{ flight_info.raw_departure_date|date('D d M') }}
                                                                    <span class="separator_point_class">.</span><span
                                                                            class="font-14 font-normal">{{ flight_info.airline_name|raw }}</span>
                                                                </p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                {% endif %}

                                                {% set origin_airport_code = flight_info.origin_airport_code %}



                                                <div class="row no-margin margin_top_30">
                                                    <div class="col-xs-12 nopad">
                                                        <div class="row no-margin">
                                                            <div class="col-sm-4 col-xs-12 nopad">
                                                                <p class="font-16 black line-height-18">{{ flight_info.airline_name|raw }}
                                                                    <br>{{ flight_info.airline_code|raw }}{{ flight_info.flight_number|raw }}
                                                                    <br><span
                                                                            class="grey font-14">{{ flight_info.cabin|raw }}</span>
                                                                </p>
                                                            </div>
                                                            <div class="col-sm-2 col-xs-3 nopad">
                                                                <p class="font-18 black line-height-18">{{ flight_info.departure_time|raw }}</p>
