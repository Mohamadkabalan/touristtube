                                                                    <div class="col-sm-4 col-xs-12 nopad">
                                                                        <p class="font-16 black line-height-18">{{ stop_info.airline_name|raw }}
                                                                            <br>{{ stop_info.operating_airline_code|raw }}{{ stop_info.flight_number|raw }}
                                                                            <br><span
                                                                                    class="grey font-14">{{ stop_info.cabin|raw }}</span>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-sm-2 col-xs-3 nopad">
                                                                        <p class="font-18 black line-height-18">{{ stop_info.departure_time|raw }}</p>
