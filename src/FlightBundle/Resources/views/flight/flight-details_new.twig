                                                            </div>
                                                            <div class="col-sm-6 col-xs-9 nopad">
                                                                <p class="font-16 black line-height-18">{{ flight_info.destination_airport_code|raw }}
                                                                    <br>{{ flight_info.destination_airport|raw }}
                                                                    <br><span
                                                                            class="grey">{{ flight_info.arrival_terminal|raw }}</span>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% if flight_info.stop_info is defined and flight_info.stop_info is iterable %}
