{% extends 'baseFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/flights/css/flight-details_new1.css")|raw }}">

{% endblock %}
{% block pagenewjs %}
{% endblock %}
{% block title %}
    {{ 'Flight Details New'|trans }}{{ ' | TouristTube' }}
{% endblock %}
{% block body %}
    <section class="container new_flight_container">
        <div class="row margin_top_30">
            <div class="col-xs-12">
                <h1 class="search_title padding_left_0"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{ 'Flight details'|trans }}
                </h1>
            </div>
        </div>
        {#------------------------------------FLIGHT OVERVIEW SECTION-----------------------------------#}
        {% if isFlightDetailsValidFromPayment == false %}
            <br/>
            <p>{{ 'Sorry, We cannot issue ticket for some reasons.'|trans }}</p>
            <p>{{ 'Kindly Contact: '|trans }} <a href="mailto:flights-support@touristtube.com">flights-support@touristtube.com</a>
            </p>
        {% else %}

            <div class="row">
            <div class="col-xs-12">
                <div class="row margin_top_20">
                    <div class="col-xs-12">
                        <h2 class="fdt_sub_title black">{{ 'Flight overview'|trans }}</h2>
                    </div>
                </div>
                <div class="row margin_top_10">
                    <div class="col-xs-12">
                        <p class="font-16 line-height-20 black margin_bottom_0">{{ 'Your reservation is booked and confirmed. There is no need to call us to reconfirm this reservation'|trans }}</p>
                    </div>
                </div>
                <div class="row margin_top_10">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-xs-5">
                                <p class="grey font-14 uppercase line-height-20">{{ 'Booking ID'|trans }}</p>
                            </div>
                            <div class="col-lg-10 col-md-9 col-xs-7">
                                <p class="black font-16 line-height-20">{{ flight.pnr_id|raw }}</p>
                            </div>
                        </div>
