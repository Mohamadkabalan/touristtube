                            <div class="col-lg-2 col-md-3 col-xs-5">
                                <p class="grey font-14 uppercase line-height-20">{{ 'Ticket'|trans }} #</p>
                            </div>
                            <div class="col-lg-10 col-md-9 col-xs-7">
                                <p class="black font-16 line-height-20">

                                    {% for passenger in passengers %}
                                        {{ passenger.ticket_number|raw }} ({{ passenger.first_name|raw }} {{ passenger.surname|raw }}) ,
                                    {% endfor %}

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>{#------------------------------------END FLIGHT OVERVIEW SECTION-----------------------------------#}

            {#------------------------------------DEPARTURE CONTAINER-----------------------------------#}
