<div class="row margin_top_20">
    <div class="col-xs-12">
	<p class="font-22 black font-bold padding_right_10 pull-left"><i class="fas fa-angle-right pink_font-awsome_logo"></i>{{'Payment Details'|trans}}</p>
    </div>
    <div class="col-md-10 col-sm-11 col-xs-12">
	<p class="font-16 black font-bold margin_top_10 margin_bottom_0 line-height-20">{{'No booking fees. TouristTube services are always free, so you save money.'|trans}}</p>
	<p class="font-16 grey margin_bottom_0 line-height-20">
	    {{'Payment will be taken directly by the property. In some cases, prior to your arrival, they may pre-authorise your card to confirm that your card is valid and hasnâ€™t been lost or stolen. This can appear as a temporary reduction in your balance, but is not the actual charge. For further details, you can contact your credit card provider.'|trans}}
	    {% if hotelDetails.creditCardDetails is defined and hotelDetails.creditCardDetails is not empty %}
		{{'This property accepts the following forms of payment:'|trans}}
		{% for card in hotelDetails.creditCardDetails %}
		    {{ card.name }}{% if loop.last == false %}{{ ', ' }}{% endif %}
		{% endfor %}.
	    {% endif %}
	</p>
    </div>
    {% if reservationDetails.freeCancellationWithIn is defined %}
	<div class="col-xs-12">
	    <p class="font-16 blue font-bold margin_top_10 ">{{'FREE cancellation within'|trans ~ ': ' ~ reservationDetails.freeCancellationWithIn}}</p>
	</div>
    {% endif %}

    {% if reservationDetails.totalCancellationCost is defined %}
	<div class="col-xs-12">
	    <p class="font-16 black margin_top_10 line-height-20 margin_bottom_0">{{'Total Cancellation Cost'|trans ~ ':'}}</p>
	    <p class="font-16 grey line-height-20">
		{% for info in reservationDetails.totalCancellationCost %}
		    {{ info|trans }}<br/>
		{% endfor %}
	    </p>
	</div>
    {% endif %}

    {% if reservationDetails.totalPrepayment is defined %}
	<div class="col-xs-12">
	    <p class="font-16 black margin_top_10 line-height-20 margin_bottom_0">{{'Total Prepayment'|trans ~ ':'}}</p>
	    <p class="font-16 grey line-height-20">
		{% for info in reservationDetails.totalPrepayment %}
		    {{ info|trans }}<br/>
		{% endfor %}
	    </p>
	</div>
    {% endif %}

    <div class="col-xs-12">
	{% if reservationDetails.cancelable is defined and reservationDetails.cancelable and not reservationDetails.canceled  %}
	    <form id="reservation-cancel-submit" method="post" action="{{cancelURL}}" autocomplete="off">
		<button id="cancel_whole_reservation" class="btn cancel_booking margin_top_10 margin_bottom_10" type="submit">
		    <span>{{ 'Cancel your reservation'|trans }}</span>
		</button>
	    </form>
	{% elseif reservationDetails.cancellation is defined %}
	    <p class="font-16 black margin_top_10 line-height-20 margin_bottom_0 {% if not reservationDetails.cancelable %}cancelled{% endif %}">{{'Cancellation'|trans ~ ':'}}</p>
	    <p class="font-16 grey line-height-20 {% if not reservationDetails.cancelable %}cancelled{% endif %}">{{reservationDetails.cancellation|trans}}</p>
	{% endif %}
    </div>
    <div class="col-xs-12">
	<a href="{{ generateLangRoute(LanguageGet,'_help')}}" class="underline blue">{{'Need help?'|trans}}</a>
    </div>
</div>
