<div class="row no-margin">
    <div class="col-xs-12 nopad">
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div id="location-form" class="row small_row_margin">
                    <div class="col-xs-12 small_col_padding">
                        <div class="row small_row_margin">
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'Property Name'|trans}}*</label>
                                <input class="form-control" type="text" name="name" placeholder="{{'name'|trans}}*" data-id="" required>
                            </div>
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'Country'|trans}}*</label>
                                <select id="country" name="country" class="hotel_best_input_commun" required>
                                    <option value="">{{'Country'|trans}}*</option>
                                    <option value="1">LEB</option>
                                </select>
                            </div>
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'City'|trans}}*</label>
                                <input class="form-control" type="text" name="city" placeholder="{{'City'|trans}}*" data-id="" required>
                            </div>
                            <div class="col-xs-12 small_col_padding">
                                <p class="rating_popup">Rating<span><img class="" alt="rating_stars" src="{{ generateMediaURL('/media/images/stars_rating_6.png') }}"></span></p>
                            </div>
                        </div>                       
                    </div>  
                    <div class="col-xs-12 small_col_padding">
                        <div class="row small_row_margin">
                            <div class="col-xs-12 small_col_padding">
                                <h2 class="subtitle_popup">Contact</h2>
                            </div>
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'Full name'|trans}}*</label>
                                <input class="form-control" type="text" name="fname" placeholder="{{'name'|trans}}*" data-id="" required>
                            </div>                       
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'Email'|trans}}*</label>
                                <input class="form-control" type="email" name="email" placeholder="{{'@'|trans}}*" data-id="" required>
                            </div>                       
                            <div class="col-sm-4 col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <label class="form-check-label">{{'Phone'|trans}}*</label>
                                <input class="form-control" type="text" name="Phone" placeholder="{{'Phone'|trans}}*" data-id="" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 small_col_padding">
                        <div class="row small_row_margin">
                            <div class="col-xs-12 small_col_padding">
                                <h2 class="subtitle_popup margin_bottom_10">Please send us your queries, if any</h2>
                            </div>
                            <div class="col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <textarea name="description" class="col-xs-12" placeholder="{{'Text goes here (max 200 characters)'|trans}}"></textarea>
                            </div>
                            <div class="col-xs-12 small_col_padding form-group hotel_best_input_commun popup_input">
                                <p class="error_hints"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row small_row_margin">
                    <div class="col-sm-6 col-xs-12 small_col_padding">
                        <button type="button" class="col-xs-12 btn send_but">{{'Send message'|trans}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>