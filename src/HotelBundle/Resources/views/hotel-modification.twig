{% extends 'baseFinal.html.twig' %}
{% block title %}
    {{ 'Hotel Modification'|trans }}{{ ' | TouristTube' }}
{% endblock %}
{% block body %}
    <section class="container hotel_book_container">
	<div class="row margin_top_30">
	    <div class="col-sm-9 col-xs-12">
		<h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'Hotels: review and book'|trans}}</h1>
	    </div>
	    <div class="col-sm-3 col-xs-12 currencyselectbox_top">
		<div class="currency_top_but">
		    <p class="curtext_hp"><span>{{currency_symbol.symbol|raw}}</span> {{selected_currency|raw}}</p>
		</div>
	    </div>
	</div>
	<div class="row margin_top_30">
	    <form id="form_hotel_book" method="post" action="{{ generateLangRoute(LanguageGet,'_hotel_reservation_modification', {'reference': reference}) }}">
		{% set hideArrivalTime = 1 %}
		{% include '@Hotel/hotel-book-details.twig' %}
		<div class="col-md-9 col-xs-12 right_panel">
		    {% include '@Hotel/hotel-book-room.twig' %}
		    {% include '@Hotel/hotel-book-orderer.twig' %}
		    <div class="row margin_top_20">
			<div class="col-xs-12">
			    {% if isUserLoggedIn != 1 %}
				<div class="row">
				    <div class="col-xs-12">
					<p class="color_blue font_21 margin_top_20">{{'(Optional)'|trans}} . {{'Create a TouristTube Account'|trans}}</p>
				    </div>
				    <div class="col-xs-12">
					<p class="common_txt_container margin_top_20">{{'Enter a password to create an account using the email address above.'|trans}}</p>
				    </div>
				</div>
				<div class="row new_small_margin hotel_book_new_inputconatiner">
				    <div class="col-md-4 col-sm-6 col-xs-12 new_smal_padding">
					<input class="hotel_book_input formControlYourPassword" id="YourPassword" name="pass" type="password" value="" placeholder="{{'Enter your password'|trans}}">
				    </div>
				    <div class="col-md-8 col-sm-6 col-xs-12 new_smal_padding">
					<p class="password_hint_txt">{{'(should be at least 8 characters long and must be a combination of letters and numbers.)'|trans}}</p>
				    </div>
				</div>
			    {% endif %}
			    <div class="row">
				<div class="col-xs-12">
				    <div class="border-bottom-2 margin_top_30"></div>
				</div>
			    </div>
			    {% set onePage = 1 %}
			    <section class="container hotel_payment_container">
				{% set isModification = true %}
				{% include '@Hotel/hotel-book-card.twig' %}
			    </section>
			    <div class="row">
				<div class="col-xs-12">
				    <input type="hidden" name="transactionId" value="{{transactionId}}">
				    <input type="hidden" name="reservationKey" value="{{reservationKey}}">
				    <input type="hidden" name="hotelDetailsSerialize" value="{{hotelDetails|raw|json_encode()}}">
				    <input type="hidden" name="reservationMode" value="{{reservationDetails.reservationMode}}">
				    <button class="btn comlete_hotel_booking margin_top_30" type="submit">{{'Change Reservation'|trans}}</button>
				</div>
			    </div>
			</div>
		    </div>
		</div>
	    </form>
	</div>
    </section>
{% endblock %}
