{% if hotelDetails.distances is defined and hotelDetails.distances is not empty  and hotelDetails.distances|length > 1%}
    <div class="col-xs-12 accordion">
	<p class="black_wzarrow_subtitles margin_top_10"><i class="fas fa-angle-right fa-lg"></i>{{'Closest landmarks'|trans}}</p>
    </div>
    <div class="col-xs-12 panel open">
	<ul class="landmarks_list hotel-distances">
	    {% if pageSrc == HOTEL_CONSTANTS.page_src.hrs %}
		{% for distance in hotelDetails.distances %}
		    {% if distance.targetName is not empty %}
			<li>{% if distance.targetKey is not empty %}{% if distance.targetKey == 'city' %}{{ 'downtown '|trans }}{% endif %}{% endif %}{{ distance.targetName }} <span class="pink_text">{{distance.distance/1000 ~ ' km'|trans}}</span></li>
			{% endif %}
		    {% endfor %}
		{% else %}
		    {% for locationType, distanceCat in hotelDetails.distances %}
			{% for distance in distanceCat %}
			    {% if distance.name is not empty %}
			    <li>{{ distance.name }} <span class="pink_text">{{distance.distance ~ ' km'|trans}}</span></li>
			    {% endif %}
			{% endfor %}
		    {% endfor %}
		{% endif %}
	</ul>
    </div>
{% endif %}