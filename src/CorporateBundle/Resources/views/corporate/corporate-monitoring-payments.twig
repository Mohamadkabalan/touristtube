{% extends 'basecorporateFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/corporate/css/corporate-common_new.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnpopup").fancybox();
        });
    </script>
{% endblock %}
{% block title %}{{'Monitoring Payments'|trans}}{% endblock %}
