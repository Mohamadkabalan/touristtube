{% set data = decodeJSON(travel.details) %}
<div class="row flight_info_row margin_bottom_28 small_margin">
    <div class="col-xs-12 small_padding"><div class="border-top-2"></div></div>
    <div class="col-lg-11 col-md-10 col-sm-10 col-xs-9 small_padding">
            <div class="row small_margin">
                <div class="col-md-1 col-sm-1 small_padding margin_top_10">
                        <img alt="{{'flight_comp_img'|trans}}" src="{{ generateMediaURL('/media/images/airline-logos')}}/{{data.logo|raw}}">
                </div>
                <div class="col-md-11 col-sm-11 small_padding margin_top_10">
                    <div class="row small_margin">
                        <div class="col-xs-12 small_padding">
                            <p class="conatiner_header">
                                    {{travel.name|raw}}<span class="small_font"> {{data.airline|raw}}{{data.flightNumber|raw}}</span>
                            </p>
                        </div>
                        {#departure starts here#}
                        <div class="col-xs-12 small_padding">
                            <div class="row small_margin">
                                <div class="col-xs-12 small_padding">
                                        <span class="blue_text">{{'Departure'|trans}}</span>
                                </div>
                            </div>
                            <div class="row small_margin">
                                <div class="col-md-2 col-sm-2 col-xs-12 small_padding">
                                        {{travel.fromdate}}
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-3 small_padding border-left-1">
                                        <strong>{{data.departureAirport|raw}}</strong>
                                </div>
                                {#<div class="col-md-2 col-sm-8 col-xs-8 small_padding border-left-1">
                                        {{data.departureAirport|raw}}
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-1 small_padding border-left-1 text-center">
                                        {{travel.todate}}
                                </div>
                                <div class="col-sm-2 visible-sm"></div>
                                <div class="col-md-1 col-sm-1 col-xs-3 small_padding border-left-1">
                                        <strong>{{travel.todate}}</strong>
                                </div>
                                <div class="col-md-3 col-sm-6 col-xs-8 small_padding border-left-1">
                                        {{data.arrivalAirport|raw}}<br><span class="terminal_span">{{'Terminal 1'|trans}}</span>
                                </div>#}
                                {#<div class="col-md-1 col-sm-1 col-xs-1 visible-xs small_padding border-left-1 text-center">
                                        9
                                </div>
                                <div class="col-md-1 col-sm-2 col-xs-3 small_padding border-left-1">
                                        <strong>04h45</strong>
                                </div>
                                <div class="col-md-1 col-sm-1 hidden-xs small_padding border-left-1 text-center">
                                        9
                                </div>#}
                            </div>
                        </div>
                        {#departure end here#}
                        {#arrival starts here#}

                        <div class="col-xs-12 small_padding mobile_margin_top_10">
                            <div class="row small_margin">
                                <div class="col-xs-12 small_padding">
                                        <span class="blue_text">{{'Arrival'|trans}}</span>
                                </div>
                            </div>
                            <div class="row small_margin">
                                <div class="col-md-2 col-sm-2 col-xs-12 small_padding">
                                        {{travel.todate}}
                                </div>
                                {#<div class="col-md-1 col-sm-1 col-xs-3 small_padding border-left-1">
                                        <strong>16:00</strong>
                                </div>#}
                                <div class="col-md-2 col-sm-8 col-xs-8 small_padding border-left-1">
                                        {{data.arrivalAirport|raw}}
                                </div>
                               {#  <div class="col-md-1 col-sm-1 col-xs-1 small_padding border-left-1 text-center">
                                        0
                                </div>#}
                                {#<div class="col-sm-2 visible-sm"></div>
                                <div class="col-md-1 col-sm-1 col-xs-3 small_padding border-left-1">
                                        <strong>19:45</strong>
                                </div>
                                <div class="col-md-3 col-sm-6 col-xs-8 small_padding border-left-1">
                                        {{'Paris Charles De Gaulle'|trans}}<br><span class="terminal_span">{{'Terminal 1'|trans}}</span>
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-1 visible-xs small_padding border-left-1 text-center">
                                        9
                                </div>
                                <div class="col-md-1 col-sm-2 col-xs-3 small_padding border-left-1">
                                        <strong>04h45</strong>
                                </div>
                                <div class="col-md-1 col-sm-1 hidden-xs small_padding border-left-1 text-center">
                                        9
                                </div>#}
                            </div>
                        </div>

                        {#arrival end here#}
                        <div class="col-xs-12 small_padding">
                            <div class="row small_margin margin_top_20">
                                <div class="col-xs-12 flight_price_container small_padding width_35_perc">
                                    <p>{{travel.currency|raw}} {{travel.amount|raw|number_format(2, '.', ',')}}</p>
                                </div>
                                <div class="col-xs-12 col-sm-7 flight_view_container small_padding">
                                    <div class="links_container no-margin">
                                            <a type="button" class="hotel_details" data-toggle="modal1" data-target="#myModal1" onclick="detailPopup('{{ generateLangRoute(LanguageGet, '_corporate_flight_reservation_details', {'reservationId':travel.reservationId})}}')">{{'View details'|trans}}</a> | 
                                            <a href="{{ generateLangRoute(LanguageGet,'_corporate_flight', {'reservationId':travel.reservationId}) }}" class="book_again">{{'Book a new flight'|trans}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 small_padding margin_top_10 req_by_at">
                            <div>{{'Requested By:'|trans}} {{travel.userName|raw}}</div>
                            <div>{{'Requested At:'|trans}} {{travel.transactionDate|raw}}</div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="col-lg-1 col-md-2 col-sm-2 col-xs-3 small_padding">
            <div class="row">
                <div class="col-xs-12 margin_bottom_5">
                    <div class="checkin_checkout_container">
                        <p class="in_out">{{'DEPARTURE'|trans}}</p>
                        <p class="date">{{travel.fromdate|date('d')}}</p>
                        <p class="month_day">{{travel.fromdate|date('M Y l')}}</p>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="checkin_checkout_container">
                        <p class="in_out">{{'ARRIVAL'|trans}}</p>
                        <p class="date">{{travel.todate|date('d')}}</p>
                        <p class="month_day">{{travel.todate|date('M Y l')}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-xs-12 small_padding padding_left_70 margin_top_10">
            <p class="bag_fees">{{'Bag fees: Baggage fees when purchased at the airport (Prices may be cheaper if purchased online with Middle East Airlines)'|trans}}</p>
            <p class="bag_fees">{{'Carry on: No fee, 1st checked bag: No fee up to 30 kg, 2nd checked bag: $19.00 per kg, Baggage Information: Middle East Airlines'|trans}}</p>
        </div>
        <div class="col-xs-12 small_padding margin_top_10"><div class="border-top-2"></div></div>

</div>
