{% extends 'basecorporateFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/corporate/css/corporate-common_new.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
{% endblock %}
{% block title %}{{'Profile settings'|trans}}{% endblock %}
{% block body %}
    <section class="container corporate_common_new_container">
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div class="row no-margin margin_top_20 margin_bottom_40">
                    <div class="col-xs-12 nopad">
                        <div class="circlimg_arrow"><i class="fas fa-angle-right"></i></div>
                        <h1 class="search_title">Profile settings</h1>
                    </div>
                </div>
                <div class="row no-margin bordered_row"></div>
            </div>
            <div class="col-xs-12 nopad">
                <div class="row no-margin">
                    <div class="col-sm-4 col-xs-12 nopad">
                        <div class="row no-margin">
                            <div class="col-xs-12 nopad">
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <p class="header_txt_common"><span>1.</span>{{'Update photo'|trans}}</p>
                                    </div>
                                    <div class="col-xs-12 nopad">
                                        <img class="change_img_logo" src="/images/tuber/change_img_logo.png" alt="change img">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 nopad">
                <div class="row no-margin">
                    <div class="col-xs-12 nopad">
                        <div class="row no-margin margin_top_40">
                            <div class="col-xs-12 nopad">
                                <p class="header_txt_common"><span>2.</span>{{'Update profile'|trans}}</p>
                            </div>
                            <div class="col-xs-12 nopad">
                                <div class="row no-margin">
                                    <div class="col-lg-9 col-xs-12 nopad">
                                        <div class="row corporate_small_row_margin">
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Contact first name'|trans}}</label>
                                                <input value="" type="text" name="fname" class="default_input required" data-alert="{{'Please enter your First name'|trans}}" placeholder="{{'Michel'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Contact middle name'|trans}}</label>
                                                <input value="" type="text" name="mname" class="default_input required" data-alert="{{'Please enter your Middle name'|trans}}" placeholder="{{'Sfeir'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Contact last name'|trans}}</label>
                                                <input value="" type="text" name="lname" class="default_input required" data-alert="{{'Please enter your Last name'|trans}}" placeholder="{{'Sfeir'|trans}}" />
                                            </div>
                                        </div>
                                        <div class="row corporate_small_row_margin margin_top_30">
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Account'|trans}}</label>
                                                <input value="" type="text" name="account" class="default_input required" data-alert="{{'Please enter your Account'|trans}}" placeholder="{{'Touristtube'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Email'|trans}}</label>
                                                <input value="" type="email" name="email" class="default_input required" data-alert="{{'Please enter your Email'|trans}}" placeholder="{{'User @touristtube.com'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Mobile'|trans}}</label>
                                                <input value="" type="text" name="mobile" class="default_input required" data-alert="{{'Please enter your Mobile'|trans}}" placeholder="{{'Mobile'|trans}}" />
                                            </div>
                                        </div>
                                        <div class="row corporate_small_row_margin margin_top_30">
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Country'|trans}}</label>
                                                <select name="country" class="default_input">
                                                    <option value="" selected="selected">{{'Search for country'|trans}}</option>
                                                    <option value="1">lebanon</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'City'|trans}}</label>
                                                <select name="city" class="default_input">
                                                    <option value="" selected="selected">{{'Search for city'|trans}}</option>
                                                    <option value="1">beirut</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Address'|trans}}</label>
                                                <select name="address" class="default_input">
                                                    <option value="" selected="selected">{{'Address'|trans}}</option>
                                                    <option value="1" >1</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 nopad">
                <div class="row no-margin">
                    <div class="col-xs-12 nopad">
                        <div class="row no-margin margin_top_40">
                            <div class="col-xs-12 nopad">
                                <p class="header_txt_common"><span>3.</span>{{'Passport details'|trans}}</p>
                            </div>
                            <div class="col-xs-12 nopad">
                                <div class="row no-margin">
                                    <div class="col-lg-9 col-xs-12 nopad">
                                        <div class="row corporate_small_row_margin">
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Passport number'|trans}}</label>
                                                <input value="" type="text" name="passnum" class="default_input required" data-alert="{{'Please enter your Passport number'|trans}}" placeholder="{{'Passport number'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Issue Date'|trans}}</label>
                                                <input value="" type="date" name="issuedate" class="default_input required" data-alert="{{'Please enter your Issue Date'|trans}}" />
                                            </div>
                                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                                <label class="">{{'Expiry Date'|trans}}</label>
                                                <input value="" type="date" name="expirydate" class="default_input required" data-alert="{{'Please enter your Expiry Date'|trans}}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 nopad">
                <div class="row no-margin margin_top_60">
                    <div class="col-lg-9 col-xs-12 nopad">
                        <div class="row corporate_small_row_margin">
                            <div class="col-sm-4 col-xs-12 corporate_small_col_padding">
                                <button id="" type="button" class="btn submit_yellow">{{'Submit'|trans}}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
