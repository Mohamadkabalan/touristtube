                {% if flight_segments.leaving.multi_destination == 1 %}
                    <div class="multi-destination-container-wrap">
                        {% for key, flight_info in flight_segments.leaving.flight_info %}
                            {% if flight_info.stop_segment is iterable %}
                                {%set destinationCity = "" %}
                                {%set departureDate = "" %}
                                {%set arrivalTime = "" %}
                                {% for index, stop_segment in flight_info.stop_segment %}
                                    {% set destinationCity = stop_segment.destination_city|raw %}
                                    {% set departureDate = stop_segment.departure_date|raw %}
                                    {% set arrivalTime = stop_segment.arrival_time|raw %}
                                {% endfor %}
                            {% else %}
                                {% set destinationCity = flight_info.destination_city|raw %}
                                {% set departureDate = flight_info.departure_date|raw %}
                                {% set arrivalTime = flight_info.arrival_time|raw %}
                            {% endif %}
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 bigdivpadlr multi-bottom-container">
