                             {{ form_widget(form.bestOffersPrivacy) }} {{'Tick this box to confirm you have read and accept on the basis of paragraph of the <a href="{{ generateLangRoute(LanguageGet,'_privacy-policy') }}" title="{{'privacy policy'|trans}}"> privacy policy</a> the best offers available'|trans}}
                         </div>
                         <div class="error">{{ form_errors(form.bestOffersPrivacy) }}</div>
