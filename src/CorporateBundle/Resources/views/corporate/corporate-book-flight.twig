{% extends 'basecorporate.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/corporate/css/corporate-flightandmenue.css")|raw }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/flights/css/book-flight.css")|raw }}" >
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/flights/css/flight-breadcrumb.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript">
        var isCorporate = true;
    </script>
    <script type="text/javascript" src="{{ asset("/assets/vendor/jquery/plugins/session/js/jquery.sessionTimeout.min.js")|raw }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/flights/js/book-flight.js")|raw }}"></script>

    {# <script type="text/javascript">

         var frmValidator = new TTFormValidator("#bookAirTicket");
         var isValid = frmValidator.validate();

     </script>
 #}
{% endblock %}
{% block title %}{{'Flight Booking'|trans}}{% endblock %}
{% block body %}
    {% set page_menu_name = 'flights' %}
    <section class="container containerwhite paddingBookFlight">

        {% set err = false %}

        {% if priceError is defined %}
            {% set err = true %}
            <div class="price_error">
                <p>{{'The price is no longer available.'|trans}}</p>
                <p>{{'This might happen if the trip is sold out or its price has changed.'|trans}}</p>
                <p>{{'Kindly click'|trans}} <a href="javascript:history.back();">{{'here'|trans}}</a> {{'to choose another flight or'|trans}} <a id="searchAgain" href="{{ generateLangRoute(LanguageGet,'_corporate_flight') }}">{{'here'|trans}}</a> {{'to search again.'|trans}}</p>
            </div>
        {% elseif errors is defined %}
            <div class="alert-danger error-container">
                <ul>
                    {% for message in errors %}
                        <li>
                            {{message|raw}}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% elseif error is defined %}
            <div class="alert-danger error-container">
                {{error}}
            </div>
        {% endif %}

        {% if not err %}

            <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11 divstepspad hidden-sm hidden-xs flight-breadcrumb">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 firststep hidden-xs">
                    <div class="bullet">
                        <p>1</p>
                    </div>
                    <p class="number-step-text">{{'Select your flight'|trans}}</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 sndstep blue_bullet">
                    <div class="bullet">
                        <p>2</p>
                    </div>
                    <p class="number-step-text">{{'Enter your details'|trans}}</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 thirdstep hidden-xs">
                    <div class="bullet">
                        <p>3</p>
                    </div>
                    <p class="number-step-text">{{'Confirm your payment'|trans}}</p>
                </div>
                <div class="clear"></div>
            </div>
            {{ form_start(form, {'action': path('_corporate_flight_controller_service'), 'attr': {'id': 'bookAirTicket'}}) }}
            <div class="error form-errors">{{ form_errors(form) }}</div>
            {% if flight_segments.leaving.multi_destination == 1 %}
                <div class="multi-destination-container">
                    <div class="col-xs-12 nopad">
                        <div class="col-xs-12 nopad mar-top-40">
                            <div id="left">
                                {% for flight_info in flight_segments.leaving.flight_info %}
                                    <a href="#target{{loop.index}}" rel="nofollow" class="tabslide">trip {{loop.index}}</a>
                                    <div class="borderrdiv"></div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-xs-12 nopad">
                            <div id="right">
                                {% for key, flight_info in flight_segments.leaving.flight_info %}
                                    <div class="tabslide slider" id="target{{loop.index}}">
                                        <div class="col-xs-12 nopad">
                                            <div class="col-xs-12 blueresume">
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 nopad">
                                                    <div class="textdiv floatlefttext">
                                                        <div class="departresume">{{'departing from:'|trans}}</div>
                                                        <div class="cityresume">{{flight_info.origin_city |raw}}</div>
                                                    </div>
                                                    <div class="newimgdiv">
                                                        <img class="" src="{{ generateMediaURL('/media/images/airplanepic.png') }}" alt="airplane">
                                                    </div>
                                                    <div class="textdiv floatrighttext">
                                                        <div class="destinationresume">{{'destination:'|trans}}</div>
                                                        <div class="destinationcityresume">
                                                            {% if flight_info.stop_segment is iterable %}
                                                                {% set city = "" %}
                                                                {% for index, stop_segment in flight_info.stop_segment %}
                                                                    {% set city = stop_segment.destination_city |raw %}
                                                                {% endfor %}
                                                                {{city}}
                                                            {% else %}
                                                                {{flight_info.destination_city |raw}}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 greyresume">
                                                <div class="textdivresume">
                                                    <div class="flight-fields">
                                                        <div class="flight-field locdepartresume flight-bullet">{{flight_info.origin_airport|raw}}</div>
                                                        <div class="flight-field firstnumbresume">{{flight_info.airline_name|raw}} - {{flight_info.airline_code|raw}}{{flight_info.flight_number|raw}}</div>
                                                        <div class="flight-field firstnumbresume">{{flight_info.departure_date|raw}} - {{flight_info.departure_time|raw}}</div>
                                                        <div class="flights-border-link"></div>
                                                        <div class="flight-field destresume flight-bullet {% if flight_info.stop_segment is iterable %} small-flight-bullet {% endif %}">
                                                            <div class="compflimg">
                                                                <img class="chtimg" alt="{{flight_info.airline_code|raw}}" src="{{ generateMediaURL('/media/images/airline-logos') }}/{{flight_info.airline_code|raw}}.jpg"/>
                                                            </div>
                                                            <div>{{flight_info.destination_airport|raw}}</div>
                                                            <div class="firstnumbresume">{{flight_info.arrival_date|raw}} - {{flight_info.arrival_time|raw}}</div>
                                                        </div>
                                                    </div>
                                                    <div class="stop-flight-fields">
                                                        {% if flight_info.stop_segment is iterable %}
                                                            {% for stop_segment in flight_info.stop_segment %}
                                                                <div class="stop-wrap">
                                                                    <div class="stopsresume">{{'Stop:'|trans}}<span class="spanfirstresume">{{stop_segment.stop_duration|raw}}</span></div>
                                                                    <div class="stop-border-link"></div>
                                                                </div>
                                                                <div class="flight-fields">
                                                                    <div class="flight-field locdepartresume flight-bullet small-flight-bullet">{{stop_segment.origin_airport|raw}}</div>
                                                                    <div class="flight-field firstnumbresume">{{stop_segment.airline_name|raw}} - {{stop_segment.airline_code|raw}}{{stop_segment.flight_number|raw}}</div>
                                                                    <div class="flight-field firstnumbresume">{{stop_segment.departure_date|raw}} - {{stop_segment.departure_time|raw}}</div>
                                                                    <div class="flights-border-link"></div>
                                                                    <div class="flight-field destresume flight-bullet small-flight-bullet">
                                                                        <div class="compflimg">
                                                                            <img class="chtimg" alt="{{stop_segment.airline_code|raw}}" src="{{ generateMediaURL('/media/images/airline-logos') }}/{{stop_segment.airline_code|raw}}.jpg"/>
                                                                        </div>
                                                                        <div>{{stop_segment.destination_airport|raw}}</div>
                                                                        <div class="firstnumbresume">{{stop_segment.arrival_date|raw}} - {{stop_segment.arrival_time|raw}}</div>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="round-or-one-trip-container">
                    {% set flightType = "" %}
                    {% set col = "" %}
                    {% if flight_segments.leaving.one_way %}
                        {% set flightType = "one-way" %}
                        {% set col = "12" %}
                    {% else %}
                        {% set flightType = "roundtrip" %}
                        {% set col = "6" %}
                    {% endif %}
                    {% for key, flight_segment in flight_segments %}
                        <div class="col-lg-{{col}} col-md-{{col}} col-sm-{{col}} col-xs-12 padlefresume {{flightType}}">
                            <div class="col-xs-12 blueresume">
                                <div class="textdiv floatlefttext">
                                    <div class="departresume">{{'departing from:'|trans}}</div>
                                    <div class="cityresume">{{flight_segment.origin_city|raw}}</div>
                                </div>
                                <div class="newimgdiv">
                                    <img class="" src="{{ generateMediaURL('/media/images/airplanepic.png') }}" alt="{{'airplane'|trans}}">
                                </div>
                                <div class="textdiv floatrighttext">
                                    <div class="destinationresume">{{'destination:'|trans}}</div>
                                    <div class="destinationcityresume">{{flight_segment.destination_city|raw}}</div>
                                </div>
                            </div>
                            <div class="col-xs-12 greyresume">
                                {% for flight_info in flight_segment.flight_info %}
                                    <div class="textdivresume">
                                        {% if flight_info.stop_indicator != 1 %}
                                            <div class="dateresume">{{flight_info.departure_date|raw}}</div>
                                        {% else %}
                                            <div class="stopsresume">Stop:<span class="spanfirstresume">{{flight_info.stop_duration|raw}}</span></div>
                                            <div class="stop-border-link"></div>
                                        {% endif %}
                                        <div class="flight-fields">
                                            <div class="flight-field locdepartresume flight-bullet">{{flight_info.origin_airport|raw}}</div>
                                            <div class="flight-field firstnumbresume">{{flight_info.airline_name|raw}} - {{flight_info.airline_code|raw}}{{flight_info.flight_number|raw}}</div>
                                            <div class="flight-field firstnumbresume">{{flight_info.departure_date|raw}} - {{flight_info.departure_time|raw}}</div>
                                            <div class="flights-border-link"></div>
                                            <div class="flight-field destresume flight-bullet">
                                                <div class="compflimg">
                                                    <img class="chtimg" alt="{{flight_info.airline_code|raw}}" src="{{ generateMediaURL('/media/images/airline-logos') }}/{{flight_info.airline_code|raw}}.jpg"/>
                                                </div>
                                                <div>{{flight_info.destination_airport|raw}}</div>
                                                <div class="firstnumbresume">{{flight_info.arrival_date|raw}} - {{flight_info.arrival_time|raw}}</div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            {% for index, passenger in form.passengerDetails %}
                <div class="box-container adultcontainer col-xs-12">
                    <h1 class="adultstyletext">{{passengersArray[index].name}}</h1>
                    {{ form_widget(passenger.type, {'attr': {'value': passengersArray[index].type}}) }}
                    <div class="col-xs-12 gender-wrapper">
                        {{ form_widget(passenger.gender) }}
                        <div class="error">{{ form_errors(passenger.gender) }}</div>
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                        <div class="form-group">
                            {{ form_label(passenger.firstName) }}
