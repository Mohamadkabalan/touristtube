                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'value' : user_email}) }}
                        <div class="error">{{ form_errors(form.email) }}</div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 padtz form-group-wrap">
