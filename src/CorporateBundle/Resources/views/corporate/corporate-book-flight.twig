                            {{'Flight tickets purchased may be canceled online with full refund if cancelled before 19.00 GMT on the same day of purchase.'|trans}}<br/>
                            {{'For flight tickets modifications and other cancellations airlines ticketing policies apply.'|trans}}<br/>
                            {{'Kindly Contact: '|trans}} <a href="mailto:flights-support@touristtube.com">flights-support@touristtube.com</a> - {{'Expected reply within 24 hours.'|trans}}
                            <br/>
                            <br/>
                            {{ form_widget(form.terms) }} {{'Check this box to confirm you have read, understood and accept the'|trans}} <a href="{{ generateLangRoute(LanguageGet,'_terms-and-conditions') }}" title="{{'terms & conditions'|trans}}">{{'terms and conditions'|trans}}</a> {{'and the '|trans}}<a href="{{ generateLangRoute(LanguageGet,'_privacy-policy') }}" title="{{'privacy policy'|trans}}">{{'privacy policy'|trans}}</a>.
                        </div>
                        <div class="error">{{ form_errors(form.terms) }}</div>
                    </div>
                </div>
                <div class="col-xs-12 coupon-wrap bigdivpadlr">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <p class="coupon-txt">{{'Discount Code'|trans}}</p>
                        {% if campaign_helper_text is defined %}
                            <div><span class="coupon-shade-txt">{{campaign_helper_text|raw}}</span></div>
                        {% endif %}
                        <div class="inputbox">
                            <input type="text" value="" name="coupon_code" id="couponCode" class="coupon-code" placeholder="{{'enter your discount code'|trans}}"><div class="coupon-codeverification"></div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 new-price">
                        <p id="discountedAmount" class="frt price-convert" data-price="">{{'Discount Amount'|trans}} <span class="currency-convert-text display-discounted-currency">{{displayed_currency|raw}}</span> <span class="price-convert-text"></span></p>
                        <p id="finalPrice" class="frt price-convert" data-price="">{{'Final Price'|trans}} <span class="currency-convert-text display-discounted-currency">{{displayed_currency|raw}}</span> <span class="price-convert-text"></span></p>
                    </div>
                </div>
                {#                {% if is_corporate_account == true %}
                                    <div class="col-xs-12 bigdivpadlr">
                                        <div class="form-group">
                                            <p class="coupon-txt">{{'Enter your new PIN here'|trans}}</p>
                                            <input type="text" value="" name="pin" id="pinCode" class="pin-code" required="required" placeholder="{{'Pin Code'|trans}}">
                                            {% if pin_mismatch is defined%}
                                                <div class="error">{{pin_mismatch|raw}}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif%}#}
                <div>
                    {% for key, hiddenField in hiddenFields %}
                        {% if key == 'price_attr' or key == 'price' or key == 'base_fare' or key == 'base_fare_attr' or key == 'taxes' or key == 'taxes_attr' %}
                            <div class="price-convert" data-price="{{hiddenField|raw}}"><input class="price-convert-val" type="hidden" name="{{key}}" value="{{ hiddenField|raw }}"></div>
                        {% elseif  key == 'currency_code' %}
                            <div class="price-convert"><input class="currency-convert-val" type="hidden" name="{{key}}" value="{{ hiddenField|raw }}"></div>
                        {% elseif  key != 'pin' %}
                            <input type="hidden" name="{{key}}" value="{{ hiddenField|raw }}">
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="butbluebut">
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}

        {% endif %}

    </section>
