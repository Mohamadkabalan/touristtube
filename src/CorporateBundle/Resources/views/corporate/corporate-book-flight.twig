                    </div>
                    <div class="clear"></div>
                    {#<p class="downinputtext">{{'Free SMS confirmation & trip information'|trans}}</p>#}
                    <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-8 padrz">
                        <div class="form-group">
                            {{ form_label(form.membership_id) }}
                            {{ form_widget(form.membership_id) }}
                            <div class="error">{{ form_errors(form.membership_id) }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                    <div class="form-group">
                        {{ form_label(form.alternativeNumber) }}
                        {{ form_widget(form.alternativeNumber) }}
                        <div class="error">{{ form_errors(form.alternativeNumber) }}</div>
                    </div>
                </div>
