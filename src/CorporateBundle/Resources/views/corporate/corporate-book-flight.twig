                                        <div class="newimgdiv">
                                            <img class="" src="{{ generateMediaURL('/media/images/airplanepic.png') }}" alt="{{'airplane'|trans}}">
                                        </div>
                                        <ul class="textdiv floatrighttext padright20">
                                            <li class="destinationresume">{{'destination:'|trans}}</li>
                                            <li class="destinationcityresume">{{destinationCity}}</li>
                                        </ul>
                                    </div>
                                    <div class="col-xs-12 npsmdiv">
                                        <ul class="textdiv floatlefttext">
                                            <li class="departresume depstyle padleft20">{{'Date'|trans}}</li>
                                            <li class="cityresume depstyle2 padleft20">{{departureDate}}</li>
                                        </ul>
                                        <div class="absoultetextdiv">
                                            <p class="depstyle">{{'Departs'|trans}}</p>
                                            <p class="depstyle2">{{flight_info.departure_time|raw}}</p>
                                        </div>
                                        <ul class="textdiv floatrighttext padright20">
                                            <li class="destinationresume depstyle">{{'Arrives'|trans}}</li>
                                            <li class="destinationcityresume depstyle2">{{arrivalTime}}</li>
                                        </ul>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    {% for key, flight_segment in flight_segments %}
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 bigdivpadlr">
                            <div class="bluebigdiv">
                                <div class="col-xs-12 npsmdiv">
                                    <ul class="textdiv floatlefttext">
                                        <li class="departresume padleft20">{{'departing from:'|trans}}</li>
                                        <li class="cityresume padleft20">{{flight_segment.origin_city|raw}}</li>
                                    </ul>
                                    <div class="newimgdiv">
                                        <img class="" src="{{ generateMediaURL('/media/images/airplanepic.png') }}" alt="{{'airplane'|trans}}">
                                    </div>
                                    <ul class="textdiv floatrighttext padright20">
                                        <li class="destinationresume">{{'destination:'|trans}}</li>
                                        <li class="destinationcityresume">{{flight_segment.destination_city|raw}}</li>
                                    </ul>
                                </div>
                                {%set departureDate = "" %}
                                {%set departureTime = "" %}
                                {%set arrivalTime = "" %}
                                {% for flight_info in flight_segment.flight_info %}
                                    {% if flight_info.stop_indicator != 1 %}
                                        {% set departureDate = flight_info.departure_date|raw %}
                                        {% set departureTime = flight_info.departure_time|raw %}
                                    {% endif %}
                                    {% set arrivalTime = flight_info.arrival_time|raw %}
                                {% endfor %}
                                <div class="col-xs-12 npsmdiv">
                                    <ul class="textdiv floatlefttext">
                                        <li class="departresume depstyle padleft20">{{'Date'|trans}}</li>
                                        <li class="cityresume depstyle2 padleft20">{{departureDate}}</li>
                                    </ul>
                                    <div class="absoultetextdiv">
                                        <p class="depstyle">{{'Departs'|trans}}</p>
                                        <p class="depstyle2">{{departureTime}}</p>
                                    </div>
                                    <ul class="textdiv floatrighttext padright20">
                                        <li class="destinationresume depstyle">{{'Arrives'|trans}}</li>
                                        <li class="destinationcityresume depstyle2">{{arrivalTime}}</li>
                                    </ul>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                <div class="clear"></div>
                <div class="terms-wrap">
