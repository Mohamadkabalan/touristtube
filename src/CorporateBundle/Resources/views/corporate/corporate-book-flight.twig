                    <div class="clear"></div>
                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                        <div class="form-group">
                            {{ form_label(passenger.dateOfBirth) }}
                            {{ form_widget(passenger.dateOfBirth) }}
                            <div class="error">{{ form_errors(passenger.dateOfBirth) }}</div>
                        </div>
                    </div>
                    {% if isPassportRequired == 1 %}
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                            <div class="form-group col-lg-6 col-md-5 col-sm-5 col-xs-10">
                                {{ form_label(passenger.passportNo) }}
                                {{ form_widget(passenger.passportNo) }}
                                <div class="error">{{ form_errors(passenger.passportNo) }}</div>
                            </div>
                            <div class="form-group col-lg-6 col-md-5 col-sm-5 col-xs-10">
                                {{ form_label(passenger.idNo) }}
                                {{ form_widget(passenger.idNo) }}
                                <div class="error">{{ form_errors(passenger.idNo) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_label(passenger.passportExpiry) }}
                                {{ form_widget(passenger.passportExpiry) }}
                                <div class="error">{{ form_errors(passenger.passportExpiry) }}</div>
                            </div>
                            <div class="form-group col-lg-6 col-md-5 col-sm-5 col-xs-10">
                                {{ form_label(passenger.passportIssueCountry) }}
                                {{ form_widget(passenger.passportIssueCountry) }}
                                <div class="error">{{ form_errors(passenger.passportIssueCountry) }}</div>
                            </div>
                            <div class="form-group col-lg-6 col-md-5 col-sm-5 col-xs-10">
                                {{ form_label(passenger.passportNationalityCountry) }}
                                {{ form_widget(passenger.passportNationalityCountry) }}
                                <div class="error">{{ form_errors(passenger.passportNationalityCountry) }}</div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-xs-12">
                        <div class="col-lg-12 col-md-12 col-sm-10 col-xs-12">
                            {% if flight_segments.leaving.multi_destination == 1 %}
                                <div>
                                    <ul class="nostyleul">
                                        {% for key, flight_info in flight_segments.leaving.flight_info %}
                                            <li class="greylistyle col-xs-12 nopad">
                                                <div class="flight-info col-lg-5 col-md-5 col-sm-5 col-xs-12 nopad form-group-wrap">
                                                    {{flight_info.origin_airport_code|raw}} -
                                                    {% if flight_info.stop_segment is iterable %}
                                                        {% set airport = "" %}
                                                        {% for index, stop_segment in flight_info.stop_segment %}
                                                            {% set airport = stop_segment.destination_airport_code|raw %}
                                                        {% endfor %}
                                                        {{airport}}
                                                    {% else %}
                                                        {{flight_info.destination_airport_code |raw}}
                                                    {% endif %}
                                                    , {{flight_info.airline_name|raw}}
                                                </div>
                                                <div class="baggage-info col-lg-5 col-md-5 col-sm-5 col-xs-12 nopad">
                                                    {% if passengersArray[index].leaving_baggage_info == "" or passengersArray[index].leaving_baggage_info == 0%}
                                                        {{'No information about baggage fees (Please confirm with airline)'|trans}}
                                                    {% else %}
                                                        {{passengersArray[index].leaving_baggage_info|raw}} {{'of hold luggage included.'|trans}}
                                                    {% endif %}
                                                </div>
                                                <div class="clear"></div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% else %}
                                <div>
                                    <ul class="nostyleul">
                                        {% for key, flight_segment in flight_segments %}
                                            <li class="greylistyle col-xs-12 nopad">
                                                <div class="flight-info col-lg-5 col-md-5 col-sm-5 col-xs-12 nopad form-group-wrap">{{flight_segment.origin_main_airport|raw}} - {{flight_segment.destination_main_airport|raw}}, {{flight_segment.main_airline|raw}}</div>
                                                <div class="baggage-info col-lg-5 col-md-5 col-sm-5 col-xs-12 nopad">
                                                    {% if key == 'returning' %}
                                                        {% if passengersArray[index].returning_baggage_info == "" or passengersArray[index].returning_baggage_info == 0%}
                                                            {{'No information about baggage fees (Please confirm with airline)'|trans}}
                                                        {% else %}
                                                            {{passengersArray[index].returning_baggage_info|raw}} {{'of hold luggage included.'|trans}}
                                                        {% endif %}
                                                    {% else %}
                                                        {% if passengersArray[index].leaving_baggage_info == "" or passengersArray[index].leaving_baggage_info == 0%}
                                                            {{'No information about baggage fees (Please confirm with airline)'|trans}}
                                                        {% else %}
                                                            {{passengersArray[index].leaving_baggage_info|raw}} {{'of hold luggage included.'|trans}}
                                                        {% endif %}
                                                    {% endif %}

                                                </div>
                                                <div class="clear"></div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="box-container requirementscontainer col-xs-12">
                <h1 class="adultstyletext">{{'Special Requirements'|trans}}</h1>
                {{ form_widget(form.specialRequirement) }}
                <div class="error">{{ form_errors(form.specialRequirement) }}</div>
            </div>
            <div class="box-container contactcontainer col-xs-12">
                <h1 class="adultstyletext">{{'Contact'|trans}}</h1>

                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-10 form-group-wrap">
                    <div class="form-group">
