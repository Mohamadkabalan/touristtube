{% extends 'basecorporateFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/corporate/admin/css/reports-all-bookings.css")|raw }}" />
{% endblock %}

{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset('/assets/corporate/corporate/js/corporate-reports-filter.js')|raw }}"></script>
    <script type="text/javascript" src="{{ asset('/assets/corporate/corporate/js/corporate-reports-allbookings.js')|raw }}"></script>
{% endblock %}
{% block title %}
    {{'All Bookings Reports'|trans}}
{% endblock %}
{% block body %}
    {% set report_menu = 'all_bookings' %}
    <section class="container corporate_common_new_container">
	<nav class="navbar navbar-default navbar-fixed-bottom tt-bottom-nav visible-sm visible-xs">
	    <div class="container-fluid nopad filters-group">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
		    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bottomNavBar">{{'Filters'|trans}}</button>
		</div>
		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse filter-options" id="bottomNavBar">
		    <div class="row no-margin">
			<div class="col-xs-12 nopad">
			    {% include '@Corporate/admin/reports/filter.twig' %}
			</div>
			<!-- /.navbar-collapse -->
		    </div>
		</div>
	    </div>
	    <!-- /.container-fluid -->
	</nav>
        <div class="row no-margin">
            {% include '@Corporate/admin/reports/reports_header.twig' %}
	    <div class="col-xs-12">
		<div class="row margin_top_60">
		    <div class="col-md-3 col-xs-12 left_panel hidden-sm hidden-xs">
			{% set filterSuffix = "_2" %}
			{% include '@Corporate/admin/reports/filter.twig' %}
		    </div>
		    <div class="col-md-9 col-xs-12 right_panel">
			<div class="row no-margin">
			    {% include '@Corporate/admin/reports/reports_menu.twig' %}
			</div>
			<div class="row no-margin">
			    <div class="col-xs-12 nopad">
				<img class="width-100" src="{{ generateMediaURL('/media/images/corporate_new/reports_img.jpg') }}" alt="reports_img">
			    </div>
			</div>
			<div class="row no-margin">
			    <div class="col-xs-12 nopad ">
				<div class="row no-margin">
				    <div class="col-xs-12 nopad">
					<div class="row no-margin">
					    <div class="col-sm-4 col-xs-12 nopad">
						<p class="grey_dark font-13 font-capital margin_top_13">
						    {#{'Corporate name:'|trans}#}
						</p>
						<p class="pink font-25">
						    {{'Touristtube'|trans}}
						</p>
					    </div>
					    <div class="col-sm-8 col-xs-12 nopad">
						<p class="pending_ammount">
						    {{'Amount of the approved list'|trans}}
						    <span class="price_unit">USD</span><span class="price">{{totalAmt|number_format(2, '.', ',')}}</span>
						</p>
					    </div>
					</div>
				    </div>
				    <div class="col-xs-12 nopad">
					<div class="row no-margin bordered_row_small"></div>
				    </div>
				    <div class="row margin_top_40">
					<div class="col-xs-12">
					    <div id="aprovalFlowList">
						{% include '@Corporate/admin/reports/reports-all-bookings-info.twig' %}
					    </div>
					</div>
				    </div>
				</div>
			    </div>
			</div>
			<div class="col-xs-12 nopad">
			    <div class="pagination float-right pagerWrapper" id="paginationPages">
				{{pagination|raw}}
			    </div>
			</div>
		    </div>
		</div>
	    </div>
	</div>
    </section>
{% endblock %}
