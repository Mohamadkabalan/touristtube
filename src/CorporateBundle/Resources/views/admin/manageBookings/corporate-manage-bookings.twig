{% extends 'basecorporateFinal.html.twig' %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset('/assets/corporate/admin/js/corporate-manageBookings.js')|raw }}"></script>
{% endblock %}

{% block title %}{{'Manage Bookings'|trans}}{% endblock %}
{% block body %}
    <section class="container corporate_common_new_container">
        <nav class="navbar navbar-default navbar-fixed-bottom tt-bottom-nav visible-sm visible-xs">
            <div class="container-fluid nopad filters-group">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bottomNavBar">
                        {{'Filters'|trans}}
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse filter-options" id="bottomNavBar">
                    <div class="row no-margin">
                        <div class="col-xs-12 nopad">
			                {% include '@Corporate/admin/manageBookings/filter.twig' %}
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </nav>
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div class="row no-margin margin_top_20 margin_bottom_40">
                    <div class="col-xs-12 nopad">
                        <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'Manage bookings'|trans}}</h1>
                    </div>
                </div>
                <div class="row no-margin bordered_row"></div>
            </div>
            <div class="col-xs-12">
                <div class="row margin_top_60">
                    <div class="col-md-3 col-xs-12 left_panel hidden-sm hidden-xs">
                    	{% set filterSuffix = "_2" %}
			            {% include '@Corporate/admin/manageBookings/filter.twig' %}                        
                    </div>
                    <div class="col-md-9 col-xs-12 right_panel">
                        <div class="row no-margin">
                            <div class="col-xs-12 nopad">
                                <p class="pending_ammount"><span class="price_unit">{{preferredAccountCurrency|raw}}</span>
                                    <span class="price" id="bookingTotalAmount">{{sumPreferredAccountAmount|raw|number_format(2, '.', ',')}}</span>
                                </p>
                            </div>
                            <div class="col-xs-12 nopad">
                                <div class="row no-margin bordered_row_small"></div>
                            </div>
                        </div>
                        <div class="row no-margin">
                            <div class="bookingList" id="bookingList">
                                {% if  allApprovalFlowList %}
                                    {% include '@Corporate/admin/manageBookings/corporate-manage-bookings-list.twig' %}
                                {% else %}
                                    <div class="alert alert-light" role="alert">
                                        <p>{{'No Bookings Found!'|trans}}</p>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="pagination pagerWrapper" id="paginationPages">
                                {{pagination|raw}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
