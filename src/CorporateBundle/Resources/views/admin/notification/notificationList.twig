{% extends 'basecorporateFinal.html.twig' %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset('/assets/corporate/admin/js/corporate-notificationList.js')|raw }}"></script>
{% endblock %}
{% block title %}{{'List Of Notifications'|trans}}{% endblock %}
{% block body %}
    <section class="container corporate_common_new_container">
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div class="row no-margin margin_top_20 margin_bottom_40">
                    <div class="col-xs-12 nopad">
                        <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'List Of Notifications'|trans}}</h1>
                    </div>
                </div>
                <div class="row no-margin bordered_row"></div>
            </div>
            <div class="col-xs-12 nopad margin_top_10">
                <a href="{{ generateLangRoute(LanguageGet, '_corpo_notification_add') }}" id="" class="addbut_style" rel="nofollow">{{'Add+'|trans}}</a>
            </div>
            <div class="col-xs-12 nopad margin_top_20">
                <section class="content">
                    <table id="notificationsTbl" align="center" class="dataTable table table-striped table-bordered" cellspacing="0" width="100%" 
                        ajax_url 					= "{{ path('_corpo_notification_datatable') }}" 
                        default_order_column_id  	= "id_ID"
                        default_order_direction  	= "asc"
                    >
                        <thead>
                            <tr>
                                <th id="id_ID" dbname="cn__id" width="50px">{{'Id'|trans }}</th>
                                <th id="type_ID" dbname="cnt__name" >{{'Type'|trans }}</th>
                                <th id="subject_ID" dbname="subject" width="200px">{{'Subject'|trans }}</th>
								<th id="country_ID" dbname="FullName" >{{'User'|trans }}</th>
								<th id="account_ID" dbname="ca__name" >{{'Account'|trans }}</th>
								<th id="date_ID" dbname="notification_date" width="80px">{{'Date'|trans }}</th>
                                <th id="actions" dbname="actions" skipDb="true" cell_handler="actionCellHandler" width="100px">{{'Actions'|trans }}</th>
                            </tr>
                        </thead>
                    </table>
                    <br><br>
                </section>
            </div>
        </div>
    </section>
{% endblock %}