{% extends 'basecorporateFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/assets/vendor/treegrid/css/jquery.treegrid.css')|raw }}" >
{% endblock %}

{% block pagenewjs %}
	<script type="text/javascript" src="{{ asset('/assets/vendor/treegrid/js/jquery.treegrid.js')|raw }}"></script>
    <script type="text/javascript" src="{{ asset('/assets/corporate/admin/js/corporate-accountTypeEdit.js')|raw }}"></script>
	<script type="text/javascript" src="{{ asset('/assets/corporate/admin/js/corporate-menuTreeEvent.js')|raw }}"></script>
{% endblock %}
{% block title %}{{'List Of Account Type Add/Edit'|trans}}{% endblock %}
{% block body %}
    <section class="container corporate_common_new_container">
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div class="row no-margin margin_top_20 margin_bottom_40">
                    <div class="col-xs-12 nopad">
                        <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'List Of Account Type'|trans}} / <span class="add_edit">add/edit</span></h1>
                    </div>
                </div>
                <div class="row no-margin bordered_row"></div>
            </div>
	    <form id="formId" method="POST" action="{{ generateLangRoute(LanguageGet, '_corpo_accountType_addSubmit') }}">
		<div class="col-lg-10 col-xs-12 nopad margin_top_40">
		    <div class="row corporate_small_row_margin">
			<input type="hidden" class="id" name="id" value="{{(sectionData[0].id is defined ? sectionData[0].id|raw : '')}}">
			<input type="hidden" id="typeName"  value="{{(sectionData[0].name is defined ? sectionData[0].name|raw : '')}}">
			<input type="hidden" id="typeSlug"  value="{{(sectionData[0].slug is defined ? sectionData[0].slug|raw : '')}}">
			<div class="col-md-4 col-sm-6 col-xs-12 corporate_small_col_padding lofaff">
			    <label id="nameLabel" class="form-check-label">{{'Name'|trans}}*</label>
			    <input type="text" class="col-xs-12" id="name" name="name" value="{{(sectionData[0].name is defined ? sectionData[0].name|raw : '')}}" required placeholder="{{'Name'|trans}}*" label="#nameLabel"/> 
			</div>

			<div class="col-md-4 col-sm-6 col-xs-12 corporate_small_col_padding lofaff">
			    <label id="slugLabel" class="form-check-label">{{'Slug'|trans}}*</label>
			    <input type="text" class="col-xs-12" id="slug" name="slug" value="{{(sectionData[0].slug is defined ? sectionData[0].slug|raw : '')}}" required placeholder="{{'Slug'|trans}}*" label="#slugLabel"/> 
			</div>
			<div class="clearfix"></div>

			{% include '@Corporate/admin/menuTree/menuTree.twig' %}

		    </div>
		    <div class="row corporate_small_row_margin">
			<div class="col-xs-12 corporate_small_col_padding margin_top_20">
			    <a class="back_grey" href="{{ generateLangRoute(LanguageGet,'_corpo_account_type') }}" title="{{'Back'|trans}}">{{'Back'|trans}}</a>
			    <button data-role="button" data-type="validate" type="submit" class="btn submit_yellow">{{'Submit'|trans}}</button>
			</div>
		    </div>
		</div>
	    </form>
        </div>
    </section>
{% endblock %}