{% for key,val in result['result'] %}
    <div class="#budget-filter-block row no-margin margin_top_45">
	<a href="{{val['urlPath']}}">
	    <div class="col-sm-4 col-xs-6 nopad xs-full_width">
		<div class="grey_img_container">
		    {% if val['imagePath'] is defined and val['imagePath'] %}
			<img class="width-100" src="{{val['imagePath']}}" alt="{{val['dd_dealName']}}"/>
		    {% else %}
			<img class="width-100" src="{{ generateMediaURL('/media/images/deals/default.jpg') }}" alt="{{val['dd_dealName']}}"/>
		    {% endif %}
		    {#<div class="discount_img"><p>-5%</p></div>#}
		</div>
	    </div>
	</a>
	<div class="col-sm-2 col-xs-6 col-sm-push-6 nopad xs-full_width">
	    <div class="row no-margin">
		<div class="xs_pad_left">
		    {#			<div class="col-xs-12 nopad">
						<div class="add_tobag_container">
						    <a class="addtobagtextstyle" href="#">{{'Add to tour bag'|trans}}</a>
						</div>
					    </div>#}
		    <div class="col-xs-12 nopad">
			<p class="bestpricewizlogo" href="#"><img src="{{ generateMediaURL('/media/images/deals-list_new/price_garantee_logo.png') }}" alt="price_garantee">{{'Price guarantee'|trans}} </p>
		    </div>
		    <div class="col-xs-12 nopad">
			{#<p class="prev_price" href="#">{{'From: US$ 43.38'|trans}} </p>#}
			<p class="cur_price" href="#">
			    <span class="pbpValue cur_price price-convert" data-price="{{val['dd_priceBeforePromo']}}"><span class="currency-convert-text">{{val['dd_currency']}}</span> <span class="dealPrice price-convert-text">{{val['dd_formattedPriceBeforePromo']}}</span></span></p>
			<a href="{{val['urlPath']}}" class="pink_button">{{'learn more'|trans}}</a>
		    </div>
		</div>
	    </div>
	</div>
	<a href="{{val['urlPath']}}">
	    <div class="col-sm-6 col-xs-12 col-sm-pull-2 nopad">
		<div class="infotext_container">
		    <h2>
			{% if val['dealNameTrans'] is defined and val['dealNameTrans'] %}
			    {{ val['dealNameTrans']|length > 90 ? val['dealNameTrans']|striptags|raw|slice(0, 90) ~ '...' : val['dealNameTrans']|striptags|raw}}
			{% else %}
			    {{ val['dd_dealName']|length > 90 ? val['dd_dealName']|striptags|raw|slice(0, 90) ~ '...' : val['dd_dealName']|striptags|raw}}
			{% endif %}
		    </h2>
		    <p class="blacktext">
			{% if val['descriptionTrans'] is defined and val['descriptionTrans'] %}
			    {{ val['descriptionTrans']|length > 120 ? val['descriptionTrans']|striptags|raw|slice(0, 120) ~ '...' : val['descriptionTrans']|striptags|raw}}
			{% else %}
			    {{ val['dd_description']|length > 120 ? val['dd_description']|striptags|raw|slice(0, 120) ~ '...' : val['dd_description']|striptags|raw}}
			{% endif %}
		    </p>
		    <div class="row no-margin margin_top_10">
			<div class="col-xs-12 nopad">
			    <div class="location_div"><i class="fas fa-map-marker-alt"></i></div>
			    <p class="location_text_grey">{{val['cityName']|trans}}, {{val['countryName']|trans}}</p>
			    <ul class="deals_list_ul">
				<li><a href="#">{{'E-voucher accepeted'|trans}}</a></li>
				<li class="seperator">|</li>
				<li><a href="#">{{'Free cancellation'|trans}}</a></li>
			    </ul>
			</div>
		    </div>
		</div>
	    </div>
	</a>
    </div>
{% endfor %}
