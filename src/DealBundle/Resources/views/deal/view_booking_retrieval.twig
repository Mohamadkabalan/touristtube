{# app/Resources/views/blog/index.html.twig #}
{% extends 'base.html.twig' %}
{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/deals/css/tours.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset("/assets/deals/js/tours.js")|raw }}"></script>
{% endblock %}
{% block body %}
<section class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-10">
	<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
	    <div class="overview">
		<div class="fl">
		    <h1 class="padd">{{'Retrieve your booking:'|trans}}</h1>
		</div>
	    </div>
	    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-10 bar"></div>
	    <form name="tour-search" action="" method="post" autocomplete="off">
		<div class="col-xs-12">
		    <div class="inputbox">
			<input type="text" name="bookingReference" id="bookingReference" class="form-control searchdest" placeholder="Booking Reference Number *">
		    </div>
		</div>
		<div class="col-xs-12">
		    <div class="form-group">
			<button id="viewResults" name="view" type="submit" class="btn btn-default searchTour">{{'VIEW BOOKING'|trans}}</button>
		    </div>
		</div>
	    </form>
	</div>
    </div>
        <div class="col-xs-12 nopad">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Booking Reference Number</th>
                    <th>Deal Code</th>
                    <th>Deal Name</th>
                    <th>Lead Traveller's Name</th>
                    <th>Booking Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
		    {% if bookingList %}
			{% for booking in bookingList %}
			    <tr>
			      <td>{{ booking.bookingReference }}</td>
			      <td>{{ booking.dealCode }}</td>
			      <td>{{ booking.dealName }}</td>
			      <td>{{ booking.fullname }}</td>
			      <td>{{ booking.bookingDate }}</td>
			      <td>{{ booking.totalPrice }} USD</td>
			      <td>{{ booking.status }}</td>
			    </tr>
			{% endfor %}

		  {% endif %}
                </tbody>
            </table>
        </div>
</section>
{% endblock %}