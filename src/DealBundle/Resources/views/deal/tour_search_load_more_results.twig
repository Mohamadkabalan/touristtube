{% if result is defined and result %}
    {% for key,val in result['result'] %}
	<div class="col-xs-12 nopad marbut20_d1 dealList">
	    <a href="{{val['urlPath']}}">
		<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 nopad padright5_deals1">
		    <div class="col-xs-12 nopad allgrey7back_deal1">
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 nopad">
			    {% if val['imagePath'] is defined and val['imagePath'] %}
				<img class="bigdealimg_deals1" src="{{val['imagePath']}}" alt="{{val['dd_dealName']}}"/>
			    {% else %}
				<img class="bigdealimg_deals1" src="/images/deals/default.jpg" alt="{{val['dd_dealName']}}"/>
			    {% endif %}
			</div>
			<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 nopad">
			    <p class="dealsfirstblacktext_deal1">
				{% if val['dealNameTrans'] is defined and val['dealNameTrans'] %}
				    {{ val['dealNameTrans']|length > 90 ? val['dealNameTrans']|striptags|raw|slice(0, 90) ~ '...' : val['dealNameTrans']|striptags|raw}}
				{% else %}
				    {{ val['dd_dealName']|length > 90 ? val['dd_dealName']|striptags|raw|slice(0, 90) ~ '...' : val['dd_dealName']|striptags|raw}}
				{% endif %}
			    </p>
			    <p class="dealsgreytext_deals1">
				{% if val['descriptionTrans'] is defined and val['descriptionTrans'] %}
				    {{ val['descriptionTrans']|length > 120 ? val['descriptionTrans']|striptags|raw|slice(0, 120) ~ '...' : val['descriptionTrans']|striptags|raw}}
				{% else %}
				    {{ val['dd_description']|length > 120 ? val['dd_description']|striptags|raw|slice(0, 120) ~ '...' : val['dd_description']|striptags|raw}}
				{% endif %}
			    </p>
			    <div class="col-xs-12 nopad">
				<ul class="bluedealsul_deals1">
				    <li class="dealslocimgback_deals1">{{val['cityName']|trans}}, {{val['countryName']|trans}}<li>
				</ul>
			    </div>
			    <div class="col-xs-12 nopad">
				<ul class="greendealsul_deals1">
				    <li class="">{{'E-voucher accepted'|trans}}<li>
				</ul>
			    </div>
			</div>
		    </div>
		</div>
	    </a>
	    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 nopad padleft5_deals1">
		<div class="secdivgreyback_deal1">
		    <p class="tonprice_d1">
			<span class="a_price pbpValue price-convert" data-price="{{val['dd_priceBeforePromo']}}"><span class="currency-convert-text">{{val['dd_currency']}}</span> <span class="dealPrice price-convert-text">{{val['dd_formattedPriceBeforePromo']}}</span></span></p>
		    <p class="bestpricewizlogo_deals1">{{'Price guarantee'|trans}}</p>
		    <div class="col-xs-12 nopad">
			<a href="{{val['urlPath']}}" class="lernmorebut_d1">{{'learn more'|trans}}</a>
		    </div>
		</div>
	    </div>
	</div>
    {% endfor %}
{% endif %}
