{# empty Twig template #}
{% extends 'base.html.twig' %}
{% block pagenewcss %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/6.1.3/css/bootstrap-slider.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/deals/css/tours.css")|raw }}" >
    <style>
        .redz{
            border: 1px solid red;
        }
        .tourSubmit{
            color: #fff;
            background-color: #eac31a;
            border: none;
            border-radius: 0;
            text-shadow: none;
            font-weight: bold;
        }
    </style>
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset("/assets/deals/js/deals1.js")|raw }}"></script>
{% endblock %}
{% block body %}
    <section class="container">
        <div class="col-xs-12">
            <div class="overview">
                <div class="fl bg">
                    {% if cancelled %}
                        <h1 class="padd">{{'Success'|trans}}</h1>
                    {% else %}
                        <h1 class="padd">{{'Opps error'|trans}}</h1>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-xs-12 nopad">  
            <div class="col-lg-4 col-md-4 col-sm-10 col-xs-12 nopad"> 
            {% if cancelled %}
                <div class="col-xs-12">Booking has sucessfully been cancelled. </div>
            {% else %}
                <div class="col-xs-12">Cancel Process Unsuccessful. </div>
            {% endif %}
            
            <div class="col-xs-12">
                <div class="inputbox">
		    <input type="hidden" id="page"  name="page"   class="form-control" value="{{ page|raw }}" />
                    <input type="button" id="back"    name="back"     value="Back to Tour Search" class="btn btn-default signup tourSubmit" />                  
                </div>
            </div>
            </div>
        </div>
    </section>
    
{% endblock %}
