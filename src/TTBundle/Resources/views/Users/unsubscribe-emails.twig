{% extends 'baseFinal.html.twig' %}
{% block pagenewjs %}
    <script type="text/javascript">
        $(document).ready(function() 
	{
	    if( !ttModal ) {
		ttModal = window.getTTModal("myModalZ", {});
	    }
	    
	    $(document).on('click',".reactivate_notifications" ,function()
	    {
		$('.upload-overlay-loading-fix').show();
		var $this=$(this);
		var email= $this.attr('data-email');
		$.ajax({
		    url: generateLangURL( '/ajax/reactivate_notifications', 'empty' ),
		    data: {email:email},
		    type: 'post',
		    success: function (data) {
			$('.upload-overlay-loading-fix').hide();
			var jres = null;
			try {
			    jres = data;
			    var status = jres.status;
			} catch (Ex) {
			}
			if (!jres) {
			    ttModal.alert(Translator.trans("Couldn't save please try again later"), null, null, {ok:{value:Translator.trans("close")}});
			    return;
			}	    
			ttModal.alert(jres.msg, null, null, {ok:{value:Translator.trans("close")}});			
		    }
		});
		
	    });
        });
    </script>
{% endblock %}

{% block body %}
    <section class="container message_container">
        <div class="row no-margin">
            <div class="col-xs-12 nopad">
                <div class="row no-margin">
                    <div class="col-xs-12 nopad">
                        <div class="row no-margin margin_top_20">
                            <div class="col-xs-12 nopad">
                                <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-down"></i></span>{{'Unsubscribe email'|trans}}</h1>
                            </div>
                        </div>
                    </div>
                    <div class="activateMsg col-xs-12 no-margin">
			{% if msg == '' %}
                        <p>{{ 'You have unsubscribed from Tourist Tube notifications'|trans }}</p>
			<p>{{ 'We will stop sending you emails to:'|trans }} {{email|raw}}</p>
			<p>{{ 'You can'|trans }} <span class='reactivate_notifications notifications_btn' data-email="{{email_key|raw}}">{{'re-activate notifications here'|trans}}</span></p>
			{% else %}
			    <p>{{ msg|raw }}</p>
			{% endif %}
                    </div>
                </div>
                <div class="row no-margin bordered_row"></div>
            </div>
        </div>
    </section>
{% endblock %}
