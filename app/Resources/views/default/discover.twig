{% extends 'baseFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("assets/common/css/discover.css")|raw }}" >
{% endblock %}
{% block body %}
    <section class="container city_activites_container">
	<div class="row margin_top_30">
	    <div class="col-xs-12">
		<h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{ 'Discover'|trans }}</h1>
		<h3 class="search_titleH3">{{ 'A helpful tool for anyone who is making travel plans.'|trans }}<br/>{{ 'Discover a new country, save your favorite restaurants, hotels and touristic places'|trans }}</h3>
	    </div>
	</div>
	<div class="row new_margin margin_top_30">
	    {% for subItemMain in discoverInfo %}
		<a href="{{ subItemMain.link|raw }}" title="{{ subItemMain.namealt|raw }}" class="col-md-3 col-sm-6 col-xs-12 new_padding">
		    <img class="width-100" src="{{ subItemMain.img }}" alt="{{ subItemMain.namealt|raw }}" />
		    <h2 class="subtitle_home_new">{{ subItemMain.name|raw }}{% if subItemMain.city !='' %} <span class="txtPink">| {{ subItemMain.city|raw }}</span>{% endif %}</h2>
		</a>
		{% if (loop.index%4)==0 %}
		    <div class="clearfix visible-lg visible-md"></div>
		{% endif %}		
		{% if (loop.index%2)==0 %}
		    <div class="clearfix visible-sm"></div>
		{% endif %}
	    {% endfor %}
	</div>
    </section>
{% endblock %}