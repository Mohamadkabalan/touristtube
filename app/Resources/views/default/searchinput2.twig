                                    <input type="text" id="arrivalairport-1" name="arrivalairport-1" placeholder="{{'Arrival airport / city'|trans}}" value="" class="input-search newsmalsizeinput departurearrivalinput">
                                    <input type="hidden" id="arrivalairport-1C" name="arrivalairportC-1" value="">
                                </div>
                                <div id="fromContainer-1" class="bag-search margin0 firstdate newsmalsize marselectz">
                                    <input autocomplete='off' type="text" id="fromDate-1" name="fromDateC-1" placeholder="{{'Departure date'|trans}}" value="" class="datesearch newsmalsizeinput xxsmalmarbut">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
    {% if dealblocksearchIndex ==1 %}		    
        <div class="trip_search_box dealcontent">
            <div class="seacr_pannel blacksearch greybluesearch">
                <div class="search-bar">
		    <form id="dealsform" name="dealsform"  method="post" action="{{ (dealSearchFormAction is defined)  ? dealSearchFormAction : generateLangRoute(LanguageGet,'_dealSearch') }}" autocomplete="off">
			<div class="search-bar" id="searchcontidDeals">
			    <div id="searchdestination_id" class="bag-search">
				<span class="tt-sprites i-search-map"></span>
				<span class=" tt-sprites i-search-crose">clean</span>
				<input id="deal_search" name="city" type="text"  value="{{ (city is defined)  ? city }}" placeholder="{{'Search for your destination'|trans}}" class="input-search" data-id="0" data-city="" data-state="" data-contryc="" data-type="" >
				<input id="cityName" class="inputData" name="cityName" value="{{ (city is defined)  ? city }}" type="hidden">
				<input id="dealId" class="inputData" name="dealId" value="" type="hidden">
                                <input id="cityId" class="inputData" name="cityId" value="{{ (cityId is defined)  ? cityId }}" type="hidden">
				<input id="attractionName" class="inputData" name="attractionName" value="" type="hidden">
			    </div>
				<span id="datesDealsContainer" class="floatleft">
			<div id="fromContainerD" class="bag-search margin0 marginrightten firstdate">
			    <input autocomplete='off' type="text" id="startDate" name="startDate" class="datesearch"  placeholder="{{'dd/mm/yy'|trans}}" value="{{ (startDate is defined)  ? startDate }}">
                    </div>
			<div id="toContainerD" class="bag-search seconddate">
			    <input autocomplete='off' id="endDate" type="text" name="endDate" class="datesearch"  placeholder="{{'dd/mm/yy'|trans}}" value="{{ (endDate is defined)  ? endDate }}">
			</div>
		    </span>
                    <div class="bag-search last margin0 findbut butmarleft">
			<input id="webgeo_city" type="hidden" value="{{ (webgeoCityId is defined)  ? webgeoCityId }}" name="webgeo_city">
			<input id="type" type="hidden" value="all_types" name="types">
                        <button name="search" type="submit" class="search-btn search-btnClick yellowbut">{{'Find'|trans}} <span>&raquo;</span></button>
                    </div>
		</form>
                </div>
            </div>
        </div>
