{% if hideblocksearchButtons ==0 %}
    {% if hotelblocksearchIndex ==1 %}<div class="bouttonSearchTabs hoteltab boutton-1">{{'Hotels'|trans}}</div>{% endif %}
    {% if flightblocksearchIndex ==1 %}<div class="bouttonSearchTabs flighttab boutton-2">{{'Flights'|trans}}</div>{% endif %}
    {% if dealblocksearchIndex ==1 %}<div class="bouttonSearchTabs holidaytab boutton-3">{{'Deals'|trans}}</div>{% endif %}    
{% endif %}
{% set defaultValues = {'hotelCityName': '', 'hotelCityId': 0, 'locationId': 0, 'entityType':0, 'hotelId':0, 'longitude':0, 'latitude':0 } %}
{% set input = defaultValues|merge(input) %}
<div class="clearBoth"></div>
<div class="searchcontainerfilter">
    {% if hotelblocksearchIndex ==1 %}
	{% if pageSrc is defined and pageSrc == HOTEL_CONSTANTS.page_src.hotels %}
	    {% set route = '_hotel_booking_results_tt' %}
	{% else %}
	    {% set route = '_hotel_booking_results' %}
	{% endif %}
	<div class="trip_search_box hotelscontent">
	    <div class="seacr_pannel blacksearch greybluesearch">
		<div class="search-bar" id="searchcontid2">
		    <form id="hotelform" name="hotelform" class="hotelform" method="get" action="{{ generateLangRoute(LanguageGet,route) }}" autocomplete="off">
			<div id="searchhrscontainer" class="bag-search">
			    <span class="tt-sprites i-search-map"></span>
			    <input id="searchdiscover" name="city" type="text" data-link="" placeholder="{{'City / Hotel'|trans}}" class="input-search hotelsinputsearch" value="{{input.hotelCityName}}">
			    <input id="hotelCityName" class="inputData" name="hotelCityName" value="{{input.hotelCityName}}" type="hidden">
			    <input id="hotelCityName" class="inputData" name="city[name]" value="{{input.hotelCityName}}" type="hidden">
			    <input id="hotelCityName" class="inputData" name="city[id]" value="{{input.hotelCityId}}" type="hidden">
			    <input id="hotelId" class="inputData" name="hotelId" value="{% if input.hotelId is defined %}{{input.hotelId}}{% endif %}" type="hidden">
			    <input id="locationId" class="inputData" name="locationId" value="{{input.locationId}}" type="hidden">
			    <input id="country" class="inputData" name="country" value="{% if input.country is defined %}{{input.country}}{% endif %}" type="hidden">
			    <input id="longitude" class="inputData" name="longitude" value="{% if input.longitude is defined %}{{input.longitude}}{% endif %}" type="hidden">
			    <input id="latitude" class="inputData" name="latitude" value="{% if input.latitude is defined %}{{input.latitude}}{% endif %}" type="hidden">
			    <input id="entityType" class="inputData" name="entityType" value="{{input.entityType}}" type="hidden">
			    <input id="stars" class="inputData" name="stars" value="{% if input.stars is defined %}{{input.stars}}{% endif %}" type="hidden">
			</div>
			<span id="datesContainerH" class="datesContainerSpan floatleft">
			    <div id="fromContainerH" class="bag-search margin0 marginrightten firstdate">
				<input autocomplete='off' type="text" id="fromDateH" name="fromDate" class="datesearch"  placeholder="{{'Check-In'|trans}}" value="">
			    </div>
			    <div id="toContainerH" class="bag-search seconddate">
				<input autocomplete='off' id="toDateH" type="text" name="toDate" class="datesearch"  placeholder="{{'Check-Out'|trans}}" value="">
			    </div>
			</span>
			<div class="bag-search last margin0 findbut butmarleft bag-searchflight">
			    <button name="" type="submit" class="search-btn search-btnClick yellowbut searchtext searchtext2">{{'Find'|trans}} <span>&raquo;</span></button>
			</div>
			<div class="revieclearboth">
			    <div class="searchsndmarginxs">
				<div class="inputsearchFlechCNT inputsearchFlechCNT1">
				    <span id="decrement-1" class="decbut"></span>
				    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 nopad inputsearchFlech">
					<input type="text" id="singleRooms" class="inputData inputsearch inputsearchplus" name="singleRooms" onkeypress="return isNumberKey(event);" placeholder="" value="0" max="9">
					<span>{{'Single rooms'|trans}}</span>
				    </div>
				    <span id="increment-1" class="incbut"></span>
				</div>
				<div class="inputsearchFlechCNT inputsearchFlechCNT2">
				    <span id="decrement-2" class="decbut"></span>
				    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 nopad inputsearchFlech">
					<input type="text" id="doubleRooms" class="inputData inputsearch inputsearchplus" name="doubleRooms" onkeypress="return isNumberKey(event);"  placeholder="" value="1" max="9">
					<span>{{'Double rooms'|trans}}</span>
				    </div>
				    <span id="increment-2" class="incbut"></span>
				</div>
				<div class="inputsearchFlechCNT inputsearchFlechCNT3">
				    <span id="decrement-3" class="decbut"></span>
				    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 nopad inputsearchFlech">
					<input type="text" id="adultCount" class="inputData inputsearch inputsearchplus" name="adultCount" onkeypress="return isNumberKey(event);" placeholder="" value="2">
					<span>{{'Adults'|trans}}</span>
				    </div>
				    <span id="increment-3" class="incbut"></span>
				</div>
				<div class="inputsearchFlechCNT clearbothclasss inputsearchFlechCNT4">
				    <span id="decrement-4" class="decbut"></span>
				    <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 nopad inputsearchFlech">
					<input type="text" id="childCount" class="inputData inputsearch inputsearchplus" name="childCount" onkeypress="return isNumberKey(event);" placeholder="" value="0">
					<span>{{'Children'|trans}}</span>
				    </div>
				    <span id="increment-4" class="incbut"></span>
				</div>
				<div id="guest-option">
				    {% set maxChildCount = HOTEL_CONSTANTS.max_child_count %}
				    {% set maxChildAge = HOTEL_CONSTANTS.max_child_age %}
				    {% for x in 1..maxChildCount %}
					{% set index = (x - 1) %}
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 nopad displaynone form-childdisplay form-child{{x}}">
					    <label class="col-xs-12 childtext">{{'Child'|trans}} {{x}}</label>
					    <div class="col-xs-12 paddingbottom1 childAgeCnt">
						<span class="textinsideinput">{{'Age'|trans}}</span>
						<select name="childAge{{x}}" id="childAge{{x}}" class="inputsearch childAgeSelect" onchange="return checkBedForAge({{x}})">
						    {% for i in 0..maxChildAge %}
							<option value="{{i}}" {% if attribute(child, index) is defined and attribute(child, index).age == i %} selected="selected" {% endif %}>{{i}}</option>
						    {% endfor %}
						</select>
						<select name="childBed{{x}}" id="childBed{{x}}" class="inputsearch margintop6">
						    <option value="parentsBed" {% if attribute(child, index) is defined and attribute(child, index).bed == 'parentsBed' %} selected="selected" {% endif %}>{{"In parents' bed"|trans}}</option>
						    <option value="extraBed" {% if attribute(child, index) is defined and attribute(child, index).bed == 'extraBed' %} selected="selected" {% endif %}>{{'In extra bed'|trans}}</option>
						</select>
					    </div>
					</div>
				    {% endfor %}
				</div>
			    </div>
			</div>
		    </form>
		</div>
	    </div>
	</div>
    {% endif %}
    {% if flightblocksearchIndex ==1 %}
        <div class="trip_search_box flightcontent">
            <div class="seacr_pannel blacksearch greybluesearch">
                <div class="search-bar" id="searchcontid">
