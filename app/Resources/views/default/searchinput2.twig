                            <input type="hidden" id="arrivalairportC" name="arrivalairportC" value="">
                        </div>
			<span id="datesContainer" class="datesContainerSpan floatleft">
			    <div id="fromContainer" class="bag-search margin0 marginrightten firstdate newsmalsize marselectz">
				<input autocomplete='off' type="text" id="fromDate" name="fromDateC" placeholder="{{'Departure date'|trans}}" value="" class="datesearch newsmalsizeinput">
			    </div>
			    <div id="toContainer" class="bag-search seconddate newsmalsize marselectz marginzsmall xxsmalmargintop">
				<input autocomplete='off' type="text" id="toDate" name="toDateC" placeholder="{{'Return date'|trans}}" value="" class="datesearch newsmalsizeinput">
			    </div>
			</span>
                        <div class="bag-search last margin0 findbut butmarleft bag-searchflight">
                            <input id="oneway" class="oneway" name="oneway" value="" type="hidden">
                            <input id="multiDestination" class="multi-destination" name="multidestination" value="" type="hidden">
                            <button name="search-flights" type="submit" class="find_flights search-btn search-btnClick yellowbut multiflightfindxs">{{'Find'|trans}} <span>&raquo;</span></button>
                        </div>
                        <div id="" class="bag-search newsmalsize flightclass firstselctclass marselectz">
                            <select id="cabinselect" name="cabinselect" tabindex="1" class="input-search selectclass">
                                <option value="">{{'Select class'|trans}}</option>
                                <option value="Y">{{'Economy class'|trans}}</option>
                                <option value="S">{{'Premium Economy'|trans}}</option>
                                <option value="C">{{'Business class'|trans}}</option>
                                <option value="F">{{'First class'|trans}}</option>
                            </select>
                        </div>
                        <div id="" class="bag-search newsmalsize adultclass secondselctclass marselectz">
                            <select id="adultsselect" name="adultsselect" class="input-search selectadultclass">
                                <option value="1">{{'1 adult (12+ year)'|trans}}</option>
                                <option value="2">{{'2 Adults'|trans}}</option>
                                <option value="3">{{'3 Adults'|trans}}</option>
                                <option value="4">{{'4 Adults'|trans}}</option>
                                <option value="5">{{'5 Adults'|trans}}</option>
                                <option value="6">{{'6 Adults'|trans}}</option>
                                <option value="7">{{'7 Adults'|trans}}</option>
                                <option value="8">{{'8 Adults'|trans}}</option>
                            </select>
                        </div>
                        <div id="" class="bag-search newsmalsize adultclass firstselctclass marselectz">
                            <select id="childsselect" name="childsselect" class="input-search selectadultclass">
                                <option value="0">{{'children (2-12 year)'|trans}}</option>
                                <option value="1">{{'1 child'|trans}}</option>
                                <option value="2">{{'2 children'|trans}}</option>
                                <option value="3">{{'3 children'|trans}}</option>
                                <option value="4">{{'4 children'|trans}}</option>
                                <option value="5">{{'5 children'|trans}}</option>
                                <option value="6">{{'6 children'|trans}}</option>
                                <option value="7">{{'7 children'|trans}}</option>
                                <option value="8">{{'8 children'|trans}}</option>
                            </select>
                        </div>
                        <div id="" class="bag-search newsmalsize adultclass secondselctclass marselectz marginright0">
                            <select id="infantsselect" name="infantsselect" class="input-search selectadultclass">
                                <option value="0">{{'infants (0-2 year)'|trans}}</option>
                                <option value="1">{{'1 infant'|trans}}</option>
                                <option value="2">{{'2 infants'|trans}}</option>
                                <option value="3">{{'3 infants'|trans}}</option>
                                <option value="4">{{'4 infants'|trans}}</option>
                                <option value="5">{{'5 infants'|trans}}</option>
                                <option value="6">{{'6 infants'|trans}}</option>
                                <option value="7">{{'7 infants'|trans}}</option>
                                <option value="8">{{'8 infants'|trans}}</option>
                            </select>
                        </div>
                        <div id="multiDestinationContainer" class="multi-destination-container">
                            <div class="flilghtmulti col-xs-12 nopad">
                                <div class="col-xs-12 nopad moreflightstyle">{{'flight 2'|trans}}</div>
                                <div id="departurecontainer-0" class="bag-search newsmalsize departuresmal">
                                    <span class="tt-sprites i-search-map"></span>
                                    <span class=" tt-sprites i-search-crose">{{'clean'|trans}}</span>
                                    <input type="text" id="departureairport-0" name="departureairport-0" placeholder="{{'Departure airport / city'|trans}}" value="" class="input-search newsmalsizeinput departurearrivalinput">
                                    <input type="hidden" id="departureairport-0C" name="departureairportC-0" value="">
                                </div>
                                <div id="arrivalcontainer-0" class="bag-search newsmalsize arrivalsmal">
                                    <span class="tt-sprites i-search-map"></span>
                                    <span class=" tt-sprites i-search-crose">{{'clean'|trans}}</span>
                                    <input type="text" id="arrivalairport-0" name="arrivalairport-0" placeholder="{{'Arrival airport / city'|trans}}" value="" class="input-search newsmalsizeinput departurearrivalinput">
                                    <input type="hidden" id="arrivalairport-0C" name="arrivalairportC-0" value="">
                                </div>
                                <div id="fromContainer-0" class="bag-search margin0 firstdate newsmalsize marselectz">
                                    <input autocomplete='off' type="text" id="fromDate-0" name="fromDateC-0" placeholder="{{'Departure date'|trans}}" value="" class="datesearch newsmalsizeinput xxsmalmarbut">
                                </div>
                            </div>
                            <div class="flilghtmulti col-xs-12 nopad">
                                <div class="col-xs-12 nopad moreflightstyle">{{'flilght 3'|trans}}</div>
                                <div id="departurecontainer-1" class="bag-search newsmalsize departuresmal">
                                    <span class="tt-sprites i-search-map"></span>
                                    <span class=" tt-sprites i-search-crose">{{'clean'|trans}}</span>
                                    <input type="text" id="departureairport-1" name="departureairport-1" placeholder="{{'Departure airport / city'|trans}}" value="" class="input-search newsmalsizeinput departurearrivalinput">
                                    <input type="hidden" id="departureairport-1C" name="departureairportC-1" value="">
