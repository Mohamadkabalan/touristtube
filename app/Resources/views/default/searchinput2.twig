                            <input type="text" id="departureairport" name="departureairport" placeholder="{{'Departure airport / city'|trans}}" value="" class="input-search newsmalsizeinput departurearrivalinput">
                            <input type="hidden" id="departureairportC" name="departureairportC" value="">
                        </div>
                        <div id="arrivalcontainer" class="bag-search newsmalsize arrivalsmal">
