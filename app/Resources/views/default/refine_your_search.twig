						<p class="refine_subtitles pull-right Xfrom_subtitles">{{'from'|trans}}</p>
					</div>
				</div>
			</div>
		</div>

		{% for airline_code, airline in response['airlines'] %}
		<div class="row airlines_refine" data-price="{{airline['amount_attr']}}">
			<div class="col-xs-7 no-padding-right margin-bottom-5">
				<div class="form-check">
					<div class="pull-left checkbox_holder">
						<input autocomplete="on" type="checkbox" class="form-check-input" data-value="airlines" id="airline_{{airline['name']|raw}}_{{refine_search|raw}}" value="{{airline_code|raw}}">
					</div>
					<div class="pull-left label_holder">
						<label class="form-check-label" for="airline_{{airline['name']|raw}}_{{refine_search|raw}}">{{airline['name']|raw}}</label>
					</div>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right price-convert"><span class="currency-convert-text">{{response['currency_code']|raw}}</span> <span class="price-convert-text">{{airline['amount']|raw}}</span></p>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
<div class="row margin-bottom-38 checkboxcontainer">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12">
				<p class="refine_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'stops'|trans}}</p>
