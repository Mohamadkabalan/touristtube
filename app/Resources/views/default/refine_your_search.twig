<div class="row hidden-sm hidden-xs">
	<div class="col-xs-12">
		<h3 class="refine_title">{{'Refine your search'|trans}}</h3>
	</div>
</div>
<form autocomplete="on">
{% if response['outbound'] is defined%}
{% if response['outbound'] is not empty %}
{% if response['departure_airports'] is not empty %}
<div class="row margin-bottom-38 checkboxcontainer">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-8">
				<p class="refine_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'Departure airports'|trans}}</p>
			</div>
			<div class="col-xs-4">
				<p class="refine_subtitles pull-right from_subtitles">{{'from'|trans}}</p>
			</div>
		</div>
		{% for code, deptair in response['departure_airports'] %}
		<div class="row airlines_refine" data-price="{{deptair['price_attr']}}">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" id="search_{{loop.index}}_{{refine_search|raw}}" class="form-check-input" data-value="departure_airports" value="{{code}}">
					<label for="search_{{loop.index}}_{{refine_search|raw}}" class="form-check-label"> {{code}} ({{deptair['city']}})</label>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right"><label for="" class="form-check-label price-convert"><span class="currency-convert-text">{{response['currency_code']}}</span> <span class="price-convert-text">{{deptair['price']}}</span></label></p>
			</div>
		</div>
		{% endfor %}

	</div>
</div>
{% endif %}

<div class="row margin-bottom-38 checkboxcontainer">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12">
				<p class="refine_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'departure time'|trans}} - {{ response['departureCityAirport'] }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" data-value="departure_time" id="early_morningID_{{refine_search|raw}}" value="early_morning">
					<label class="form-check-label" for="early_morningID_{{refine_search|raw}}">{{'early morning'|trans}}</label>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right">00:00-04:59</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" data-value="departure_time" id="morningID_{{refine_search|raw}}" value="morning">
					<label class="form-check-label" for="morningID_{{refine_search|raw}}">{{'morning'|trans}}</label>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right">05:00-11:59</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" data-value="departure_time" id="afternoonID_{{refine_search|raw}}" value="afternoon">
					<label class="form-check-label" for="afternoonID_{{refine_search|raw}}">{{'afternoon'|trans}}</label>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right">12:00-17:59</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" data-value="departure_time" id="eveningID_{{refine_search|raw}}" value="evening">
					<label class="form-check-label" for="eveningID_{{refine_search|raw}}">{{'evening'|trans}}</label>
				</div>
			</div>
			<div class="col-xs-5">
				<p class="checkboxright_text pull-right">18:00-23:59</p>
			</div>
		</div>
	</div>
</div>

<div class="row margin-bottom-38 checkboxcontainer">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12">
				<p class="refine_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'arrival time'|trans}} - {{ response['arrivalCityAirport'] }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-7">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" data-value="arrival_time" id="morningI_{{refine_search|raw}}" value="morning">
					<label class="form-check-label" for="morningI_{{refine_search|raw}}">{{'morning'|trans}}</label>
