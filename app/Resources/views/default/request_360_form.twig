<div class="row">
    <div class="container">
        <div class="row">
            <div class="percent_90_width">
		<div class="col-xs-12 hidden-xs">
		    <h1 class="header_backimg_title margin-top-47">{{'Get your property in 360'|trans}}</h1>
		</div>
		<form id="get_property_360_form" method="post" action="" autocomplete="off">
		    <div class="col-xs-12 request_form_container">
			<div class="row">
			    <div class="col-xs-12 request_form">
				<div class="row no-margin">
				    <div class="col-xs-12 nopad margin-bottom-24">
					<p class="intro_txt">{{'Show your clients a dazzling visual experience of your exclusive environment and increase your online conversion rate.'|trans}}</p>
					{#<a href="#" class="att_photo_link"><span><img src="{{ generateMediaURL('/media/images/double_blue_arrow.png') }}" alt="{{'blue arrow'|trans}}"></span>{{'Check our very attractive 360Â° photo-shooting offer!'|trans}}</a>#}
				    </div>
				</div>
				<div class="row no-margin margin-top-10">
				    <div class="col-xs-12 nopad">
					<div id="request-location-form" class="temp_holder">
					    <div class="row no-margin">
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Official Name of the Property'|trans}}*</label>
						    <input required="true" placeholder="Name" class="inputsSearch commun_input_style" name="property_name" type="text" autocomplete="off" maxlength="100">
						</div>
						<div class="col-sm-3 col-xs-12 styled-select nopad">
						    <label class="search_input_label">{{'Property country'|trans}}*</label>
						    <select id="country" required="true" name="country" class="selectclassstyle" onChange="changePropertyCountry(this);">
							<option value="">{{'Select your country'|trans}}</option>
							{% for item in countries_dialing_codes %}
							    <option value="{{item.code}}">{{item.name}}</option>
							{% endfor %}
						    </select>
						</div>
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Property city'|trans}}*</label>
						    <input required="true" placeholder="{{'City'|trans}}" class="inputsSearch commun_input_style" name="city" data-id="0" value="" type="text" autocomplete="off">
						</div>
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Stars'|trans}}*</label>
						    <div class="col-xs-12 nopad ratestars_container" data-type="30">
							<div class="request_form_eval_options" data-value="1" data-text="Terrible"></div>
							<div class="request_form_eval_options" data-value="2" data-text="poor"></div>
							<div class="request_form_eval_options" data-value="3" data-text="Average"></div>
							<div class="request_form_eval_options" data-value="4" data-text="Very good"></div>
							<div class="request_form_eval_options" data-value="5" data-text="Excellent"></div>
						    </div>
						</div>
					    </div>
					</div>
				    </div>
				</div>
				<div class="row no-margin margin-top-10">
				    <div class="col-xs-12 nopad">
					<div class="temp_holder">
					    <div class="row no-margin">
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Contact name'|trans}}*</label>
						    <input required="true" placeholder="{{'Full name'|trans}}" class="inputsSearch commun_input_style" name="contact_name" type="text" autocomplete="off" maxlength="50">
						</div>
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Email'|trans}}*</label>
						    <input required="true" placeholder="{{'Email address'|trans}}" class="inputsSearch commun_input_style" name="email" type="text" autocomplete="off" maxlength="100">
						</div>
						<div class="col-sm-3 col-xs-12 styled-select nopad">
						    <label class="search_input_label">{{'Phone country code'|trans}}*</label>
						    <select required="true" name="dialing_code" class="selectclassstyle">
							<option value="" data-code="">{{'Select country code'|trans}}</option>
							{% for item in countries_dialing_codes %}
							    <option value="{{item.dialing_code}}" data-code="{{item.code}}">{{item.name}} ({{item.dialing_code}})</option>
							{% endfor %}
						    </select>
						</div>
						<div class="col-sm-3 col-xs-12 nopad">
						    <label class="search_input_label">{{'Phone'|trans}}*</label>
						    <input required="true" placeholder="{{'Phone number'|trans}}" class="inputsSearch commun_input_style noborderright" name="phone" type="text" autocomplete="off" onkeypress="return isPhoneNumeric(event)" maxlength="20">
						</div>
					    </div>
					</div>
				    </div>
				</div>
				<div class="row no-margin margin-top-10">
				    <div class="col-xs-12 nopad">
					<div class="temp_holder">
					    <div class="row no-margin">
						<div class="col-sm-9 col-xs-12 nopad">
						    <label class="search_input_label">{{'Please send us your queries, if any'|trans}}</label>
						    <textarea name="msg" class="request_form_textarea" placedholder="{{'Text goes here (max 200 characters)'|trans}}"></textarea>
						</div>
						<div class="col-sm-3 col-xs-12 nopad hidden-xs large_but_container_style">
						    <button type="button" class="search_hpage col-xs-12 req_360_send_message_btn">{{'Send message'|trans}}</button>
						</div>
					    </div>
					</div>
				    </div>
				</div>
				<div class="row">
				    <div class="col-xs-12 visible-xs">
					<button type="button" class="search_hpage req_360_send_message_btn">{{'Send message'|trans}}</button>
				    </div>
				</div>
			    </div>
			</div>
		    </div>
		</form>
            </div>
        </div>
    </div>
</div>