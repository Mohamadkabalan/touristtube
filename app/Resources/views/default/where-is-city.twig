{% extends 'baseFinal.html.twig' %}
{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/common/css/where-is.css")|raw }}" >
{% endblock %}
{% block googlemaps %}
    <script async src="https://maps.googleapis.com/maps/api/js?v=3.exp{{MAP_KEY|raw}}&libraries=places&language={{languageISO2Code|raw}}"></script>
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript">
        var regWidth;
        var regHeight = 315;
        var map;
        var marker_array=[];
        var markersArrayData=[];
        {% if whereistype==2 %}
            var zoomvalue=4;
        {% else %}
            var zoomvalue=8;            
        {% endif %}
        $(document).ready(function() {
            window.addEventListener('load', initialize);
        });
        function initialize() {            
            setTimeout(function() {
                var mapOptions = {
                    center: new google.maps.LatLng( {{where_latitude|raw}} , {{where_longitude|raw}} ),
                    zoom:zoomvalue,
                    disableDefaultUI: true,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                map = new google.maps.Map(document.getElementById("googlemap_places"),mapOptions);
            }, 5000);
        }
    </script>
{% endblock %}
{% block structureddatablock %}  
    <script type="application/ld+json">
	{
	    "@context": "http://schema.org",
	    "@type": "{{ structurePlaceType|raw }}",
	    "name" : "{{realname|raw|e('html')}}{% if parent_name!='' %}, {{parent_name|raw|e('html')}}{% endif %}",
	    "url": "{{subdomain_link|raw}}{{ app.request.getRequestUri() }}",
	    {% if description != '' %}
	    "description": "{{ description|nl2br|e('html') }}",
	    {% else %} 
	    "description": "{{realname|raw|e('html')}} is a {{ structurePlaceType|raw|e('html') }}",  
	    {% endif %}        
	    "geo": { 
	    "@type": "GeoCoordinates",
	    "latitude": "{{where_latitude|raw}}",
	    "longitude": "{{where_longitude|raw}}"
	  }
	}
    </script>
{% endblock %}
{% block body %}
    <section class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="row margin_top_10">
                    <div class="col-xs-12"> 
			<div id="googlemap_places" class="section_googlemap"><span class="section_googlemap_loading"></span></div>
                    </div>
                </div>
                <div class="row no-margin margin_top_30">
                    <div class="col-xs-12 nopad"> 
                        <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'Where is'|trans}}<span> {{name|raw}}?</span></h1>
                    </div>
                    <div class="col-xs-12 nopad">
                        <p class="grey font-16 padding_left_68">{{ description|nl2br }}</p>                      
                    </div>
                </div>
		{% if hotels_array|length>0 %}
		    <div class="row no-margin margin_lg_xs">
			<div class="col-xs-12 nopad ">
			    {% if hotelsInLink !='' %}
				<a href="{{ hotelsInLink|raw }}" title="{{'hotels in'|trans}} {{realname|raw}}"><h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{'Hotels in'|trans}} <span class="pink">{{name|raw}}{% if parent_name!='' %}, {{parent_name|raw}}{% endif %} </span></h2></a>
			    {% else %}
				<h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{'Hotels in'|trans}} <span class="pink">{{name|raw}}{% if parent_name!='' %}, {{parent_name|raw}}{% endif %} </span></h2>
			    {% endif %}			    
			</div>
			<div class="col-xs-12 nopad ">
			    <div class="row where_is_newmargin">
				{% for item in hotels_array %}
				    <a href="{{item.link|raw}}" title="{{item.namealt|raw}}" class="col-md-3 col-sm-4 col-xs-6 xs_width where_is_newpadding margin_bottom_10">
					<div class="row no-margin">
					    <div class="col-xs-12 nopad ">
						<img class="width-100"  src="{{item.img|raw}}" alt="{{item.namealt|raw}}">
						<div class="whitedownimgbag">
						    <h3 class="best_hotels_h3">{{item.name|raw}}</h3>
						    <p class="location_div font-14 grey float_left"><i class="fas fa-map-marker-alt"></i>{{item.address|raw}}</p>
						</div>
					    </div>
					    <div class="col-xs-12 nopad line-height-19 margin_top_5">
						<p class="stars_block float_left margin_bottom_0"><span class="star_rating" data-rating="{{item.stars|raw}}" data-font="11" data-color="#eac31a"></span></p>
						{#<p class="blue font-19 float_right font-bold margin_bottom_0">$135 <span class="font-13 font-normal">avg/night</span></p>#}
					    </div>
					</div>
				    </a>
				    {% if (loop.index%4)==0 %}
					<div class="clearfix visible-lg visible-md"></div>
				    {% endif %}				
				    {% if (loop.index%3)==0 %}
					<div class="clearfix visible-sm"></div>
				    {% endif %}				
				    {% if (loop.index%2)==0 %}
					<div class="clearfix visible-xs"></div>
				    {% endif %}
				{% endfor %}
			    </div>
			</div>
		    </div>
		{% endif %}
		{% if todo_array|length>0 %}
		    <div class="row no-margin margin_lg_xs">
			<div class="col-xs-12 nopad ">
			    <a href="{{ todoLink|raw }}" title="{{todoLinkName|raw}}"><h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{todoLinkName|raw}} <span>| </span><span class="font-16 pink"> {{'view more'|trans}}</span></h2></a>
			</div>
			<div class="col-xs-12 nopad ">
			    <div class="row where_is_newmargin">
				{% for item in todo_array %}
				    <a href="{{item.link|raw}}" title="{{item.titlealt|raw}}" class="col-md-6 col-xs-12 where_is_newpadding pad_top_but_0">
					<div class="row where_is_newmargin">
					    <div class="col-lg-4 col-md-5 col-xs-4 where_is_newpadding xs_width">
						<img class="width-100" alt="{{item.titlealt|raw}}" src="{{item.img|raw}}">
					    </div>
					    <div class="col-lg-8 col-md-7 col-xs-8 where_is_newpadding xs_width">
						<h4 class="pink font-15 no-margin margin_bottom_0">{{item.title|raw}}</h4>
						<p class="font-14 grey margin_bottom_0 line-height-16">{{item.description|raw}}</p>
					    </div>
					</div>
				    </a>
				{% endfor %}
			    </div>
			</div>
		    </div>
		{% endif %}
		{% if moreDealslist|length>0 %}
		    <div class="row no-margin margin_lg_xs">
			<div class="col-xs-12 nopad ">
			    <a href="{{ moreDealslink|raw }}" title="{{'What can you do in'|trans}} {{realname|raw}}"><h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{'What can you do in'|trans}} <span class="pink">{{name|raw}}</span> <span>| </span><span class="font-16 pink"> {{toursNumber|raw}} {{'tours and activities'|trans}}</span></h2></a>
			</div>
			<div class="col-xs-12 nopad ">
			    <div class="row where_is_newmargin">
				{% for item in moreDealslist %}
				    <div class="col-md-3 col-sm-4 col-xs-12 where_is_newpadding">
					<div class="row no-margin">
					    <a title="{{item.namealt|raw}}" href="{{item.link|raw}}" class="col-xs-12 nopad grey_img_and_txt_container">
						<div class="row no-margin">
						    <div class="col-xs-12 nopad image_style_container">
							<img class="width-100" alt="{{item.namealt|raw}}" src="{{item.img|raw}}">
							{#<div class="discount_img"><p>-5%</p></div>#}
						    </div>
						    <div class="col-xs-12 nopad text_style_container">
							<h4 class="image_txt_subtitle">{{item.name|raw}}</h4>
							{#<p class="travelers_recommendation">86% of travelers recommend</p>#}
							<p class="price_pink">
							    <span class="a_price price-convert" data-price="{{item.dataprice|raw}}"><span class="currency-convert-text">USD</span> <span class="price-convert-text">{{item.price|raw}}</span></span>
							</p>
						    </div>
						</div>
					    </a>
					</div>
				    </div>
				{% endfor %}
			    </div>
			</div>
		    </div>
		{% endif %}
		{% if videos_array|length>0 %}
		    <div class="row no-margin margin_lg_xs">
			<div class="col-xs-12 nopad ">
			    <a href="{{ media_link|raw }}" title="{{'Photos from travelers'|trans}}"><h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{'Photos from travelers'|trans}} <span>| </span><span class="font-16 pink"> {{'whatâ€™s in'|trans}} {{name|raw}}?</span></h2></a>                        
			</div>
			<div class="col-xs-12 nopad ">
			    <div class="row where_is_newmargin">
				{% for photo in videos_array %}
				    <a href="{{photo.link|raw}}" title="{% if photo.titlealt=='' %}{{'title'}}{% endif %}{{ photo.titlealt|raw }}" class="col-md-3 col-sm-4 col-xs-12 where_is_newpadding">
					<img class="width-100" src="{{photo.image|raw}}" alt="{% if photo.titlealt=='' %}{{'title'}}{% endif %}{{ photo.titlealt|raw }}">
				    </a>
				{% endfor %}
			    </div>
			</div>
		    </div> 
		{% endif %}
		{% if places_array|length>0 %}
		    <div class="row no-margin margin_lg_xs">
			<div class="col-xs-12 nopad ">
			    <p><h2 class="font-27 black float_left line-height-38"><i class="fas fa-angle-right left_title_arrow"></i>{{'Places to see in'|trans}} <span class="pink">{{name|raw}}</span></h2></p>
			</div>
			<div class="col-xs-12 nopad ">
			    <div class="row no-margin">
				<ul class="whereis_nearby_list">
				    {% for itemsdata in places_array %}
					<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12"><a href="{{ itemsdata.link|raw }}" title="{{ itemsdata.namealt|raw }}">{{ itemsdata.name|raw }}</a></li>
				    {% endfor %}
				</ul>
			    </div>
			</div>
		    </div>
		{% endif %}
            </div>
        </div>
    </section>
{% endblock %}