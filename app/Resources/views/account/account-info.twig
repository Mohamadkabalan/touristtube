{% extends 'baseFinal.html.twig' %}

{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/vendor/jquery/plugins/cropperjs/cropper.css")|raw }}">
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/tuber/css/tuber_commun.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset("/assets/vendor/jquery/plugins/dateRangePicker/js/moment.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/vendor/jquery/plugins/date-range-picker/js/daterangepicker.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/vendor/jquery/plugins/cropperjs/cropper.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/uploads/js/tt-cropper.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/tuber/js/account_common.js") }}"></script>
{% endblock %}
{% block title %}{{'Account Info'|trans}} | Tourist Tube{% endblock %}
{% block body %}
    <a href="" id="picfancyboxbutton" rel="nofollow" class="hidden"></a>
    <section class="container tuuber-container">
        <div class="row">
            <div class="col-xs-12">
		{% set account_header_name = 'personal info'|trans %}
                {% include "account/account-header.twig" %}
                <div class="row">
                    <div class="col-md-3 col-xs-12 left_panel">
                        <div class="row no-margin">
                            {% include "account/account-menu.twig" %}
                        </div>
                    </div>
                    <div class="col-md-9 col-xs-12 right_panel">
                        <div class="row no-margin">
                            <div class="col-xs-12 nopad">
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <h2 class="black_title">{{'About me'|trans}}</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-8 col-xs-12">
                                                <div class="row no-margin">
                                                    <div class="col-xs-12 nopad">
                                                        <div class="row no-margin margin_top_20">
                                                            <div class="col-xs-12 nopad">
                                                                <div class="col-xs-12 nopad">
                                                                    <p class="input_label_txt">{{'Describe yourself'|trans}}</p>
                                                                </div>
                                                                <div class="col-xs-12 nopad">
                                                                    <textarea name="small_description" class="accountinfo_textarea" placedholder="{{'Write a small brief about yourself'|trans}}">{{desc|raw}}</textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row no-margin margin_top_10">
                                                            <div class="col-xs-12 nopad">
                                                                <div class="col-xs-12 nopad">
                                                                    <p class="input_label_txt">{{'If you have a website, enter the URL below'|trans}}</p>
                                                                </div>
                                                                <div class="col-xs-12 nopad">
                                                                    <input type="text" name="website" class="accountinfo_input" placeholder="http://www." value="{{website|raw}}"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 col-xs-12 margin_top_20" id="account_pic">
												<div class="cropperUpload" 
													 data-title="{{'Upload / Change your photo'|trans}}"
													 data-image-url="{% if profile_pic!='' %}{{profile_pic|raw}}{% else %}{{ generateMediaURL('/media/images/tuber/change_img_logo.png')}}{% endif %}" 
													 data-popup-title="{{'Crop the image'|trans}}" 
													 data-cancel-label="{{'Cancel'|trans}}" 
													 data-save-label="{{'Save'|trans}}" 
													 data-aspect-ratio="1" 
													 data-width="230"
													 data-height="230"
													 data-extra-form-data='{"channel_id":0,"which_uploader":"account_pic"}' 
													 data-submit-url="{{generateLangURL(LanguageGet,'/ajax/image-crop-save')}}"
												></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <h2 class="black_title">{{'Personal details'|trans}}</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Gender'|trans}}</label>
                                                <p class="margin_top_20">
                                                    <label for="genderM"><input type="radio" name="gender" id="genderM" value="M" {% if gender == 'M' %}{{'checked="checked"'}} {% endif %}/> <strong>{{'Male'|trans}}</strong></label>&nbsp;&nbsp;<label for="genderF"><input type="radio" name="gender" id="genderF" value="F" {% if gender == 'F' %}{{'checked="checked"'}} {% endif %}/> <strong>{{'Female'|trans}}</strong></label>
                                                </p>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'First name'|trans}}</label>
                                                <input type="text" name="fname" class="accountinfo_input" placeholder="{{'First name'|trans}}" value="{{fname|raw}}"/>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Last name'|trans}}</label>
                                                <input type="text" name="lname" class="accountinfo_input" placeholder="{{'Last name'|trans}}" value="{{lname|raw}}"/>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                 <label class="labelstyle_account">{{'Username'|trans}}*</label>
                                                <input type="text" name="username" class="accountinfo_input" placeholder="{{'Display username instead of name'|trans}}*" value="{{uname|raw}}" readonly="readonly" disabled/>
                                            </div>                                            
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Birthday'|trans}}</label>
                                                <input value="{{dob|raw}}" type="text" name="birthday" autocomplete="off" class="accountinfo_input account_range_picker picker_single"  placeholder="{{'Date of birth yyyy-mm-dd'|trans}}"/>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Email'|trans}}*</label>
                                                <input value="{{email|raw}}" type="email" name="email" class="accountinfo_input required" data-alert="{{'Please enter your Email'|trans}}" placeholder="{{'Email address'|trans}}*" />
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Employment'|trans}}</label>
                                                <input value="{{employment|raw}}" type="text" name="employment" class="accountinfo_input" placeholder="{{'Employment'|trans}}" />
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Education'|trans}}</label>
                                                <input value="{{education|raw}}" type="text" name="education" class="accountinfo_input" placeholder="{{'Education'|trans}}" />
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Interested in'|trans}}</label>
                                                <select name="interested_in" class="accountinfo_input">
						    <option value="">{{'Interested in'|trans}}</option>
						    {% for item in interestedInList %}
							<option value="{{item.id|raw}}"{% if intrested_in == item.id %} selected="selected"{% endif %}>{{item.title|raw}}</option>
						    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div id="locationDetails" class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <h2 class="black_title">{{'Location'|trans}}</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Hometown'|trans}}</label>
                                                <input value="{{hometown|raw}}" type="text" name="hometown" class="accountinfo_input"  placeholder="{{'Hometown'|trans}}" />
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'Country'|trans}}</label>
                                                <select id="country" name="country" class="accountinfo_input">
                                                    <option value="">{{'Country'|trans}}</option>
						    {% for item in countries %}
							<option value="{{item.code|raw}}"{% if item.selected == 1 %} selected="selected"{% endif %}>{{item.name|raw}}</option>
						    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <label class="labelstyle_account">{{'City'|trans}}</label>
                                                <input type="text" name="city" value="{{city|raw}}" data-id="{{city_id|raw}}" class="accountinfo_input" placeholder="{{'Current city'|trans}}" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <button class="btn accountinfo_but account-btn-save">{{'Save'|trans}}</button>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12 margin_top_15">
                                                <button class="btn accountinfo_but account-btn-cancel">{{'Cancel'|trans}}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </section>
{% endblock %}