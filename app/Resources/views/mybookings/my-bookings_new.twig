{% extends 'baseFinal.html.twig' %}
{% block pagenewcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset("/assets/mybookings/css/my-bookings_new.css")|raw }}" >
{% endblock %}
{% block pagenewjs %}
    <script type="text/javascript" src="{{ asset("/assets/common/js/moment.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/vendor/jquery/plugins/date-range-picker/js/daterangepicker.js") }}"></script>
    <script type="text/javascript" src="{{ asset("/assets/mybookings/js/my-bookings_new.js")|raw }}"></script>
{% endblock %}
{% block body %}
    <section class="container my_bookings_container">
        <nav class="navbar navbar-default navbar-fixed-bottom tt-bottom-nav visible-sm visible-xs">
            <div class="container-fluid nopad filters-group">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bottomNavBar">
                        {{'Filters'|trans}}
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse filter-options" id="bottomNavBar">
                    <div class="row no-margin">
                        <div class="col-xs-12 nopad">
                            <div class="row no-margin">
                                <div class="col-xs-12 nopad">
                                    <p class="blue font-24 line-height-26">{{'Filters'|trans}}</p>
                                </div>
                            </div>
                            <div class="row no-margin margin_top_20">
                                <div class="col-xs-12 nopad">
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad">
                                            <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by Bookings'|trans}}</p>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad">
                                            <div class="form-check">
                                                <input type="checkbox" name="allCheckBox" value="all" id="all" class="form-check-input">
                                                <label for="all" class="form-check-label">
                                                    {{'All'|trans}} ({{totalCount|raw}})
                                                </label>
                                            </div>
                                        </div>
					<div class="col-xs-12 nopad">
					    <div class="form-check">
						<input type="checkbox" name="flightsCheckBox" value="1" id="flights" class="form-check-input">
						<label for="flights" class="form-check-label">
						    {{'Flights'|trans}}
						</label>
					    </div>
					</div>
                                        <div class="col-xs-12 nopad">
                                            <div class="form-check">
                                                <input type="checkbox" name="hotelsCheckBox" value="2" id="hotels" class="form-check-input">
                                                <label for="hotels" class="form-check-label">
                                                    {{'Hotels'|trans}}
                                                </label>
                                            </div>
                                        </div>
                                        {% if SHOW_DEALS_BLOCK==1 %}
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input type="checkbox" name="attractionsCheckBox" value="3" id="attractions" class="form-check-input">
                                                    <label for="attractions" class="form-check-label">
                                                        {{'Attractions'|trans}}
                                                    </label>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>

                                </div>
                            </div>
                            <div class="row no-margin margin_top_20">
                                <div class="col-xs-12 nopad">
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad">
                                            <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by Status'|trans}}</p>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad">
                                            <div class="form-check">
                                                <input type="radio" name="statusradio" value="past" id="past" class="">
                                                <label for="past" class="form-check-label">
                                                    {{'Past'|trans}}
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 nopad">
                                            <div class="form-check">
                                                <input type="radio" name="statusradio" value="cancelled" id="cancelled" class="">
                                                <label for="cancelled" class="form-check-label">
                                                    {{'Cancelled'|trans}}
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 nopad">
                                            <div class="form-check">
                                                <input type="radio" name="statusradio" value="upcoming" id="upcoming" class="">
                                                <label for="upcoming" class="form-check-label">
                                                    {{'Upcoming'|trans}}
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row no-margin margin_top_20">
                                <div class="col-xs-12 nopad">
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad">
                                            <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by date'|trans}}</p>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div id="dateRange" class="col-xs-12 nopad">
                                            <div class="row no-margin">
                                                <div id="fromContainer" class="col-xs-12 nopad mybookinginput pad17">
                                                    <input type="text" class="col-xs-12" id="fromDate" name="fromDateC" value="" placeholder="{{'from'|trans}}">
                                                </div>
                                            </div>
                                            <div class="row no-margin">
                                                <div id="toContainer" class="col-xs-12 nopad mybookinginput pad17">
                                                    <input type="text" class="col-xs-12" id="toDate" name="toDateC" value="" placeholder="{{'to'|trans}}">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="col-xs-12 nopad pad17">
                                            <button id="" class="btn yellow_search_common_button">{{'Search'|trans}}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </nav>
        <div class="row">
            <div class="col-xs-12">
                <div class="row no-margin margin_top_20">
                    <div class="col-xs-12 nopad">
                        <h1 class="search_title"><span class="circlimg_arrow"><i class="fas fa-angle-right"></i></span>{{'Booking history'|trans}}</h1>
                    </div>
                </div>
                <div class="row no-margin">
                    <div class="col-xs-12 nopad">
                        <div class="row margin_top_45">
                            <div class="col-md-3 col-xs-12 left_panel hidden-sm hidden-xs">
                                <div class="row no-margin">
                                    <div class="col-xs-12 nopad">
                                        <p class="blue font-24 line-height-26">{{'Filters'|trans}}</p>
                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by Bookings'|trans}}</p>
                                            </div>
                                        </div>
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input checked name="allCheckBox" type="checkbox" value="1" id="all1" class="form-check-input">
                                                    <label for="all1" class="form-check-label">
                                                        {{'All'|trans}} (<span id="totalCount">{{totalCount|raw}}</span>)
                                                    </label>
                                                </div>
                                            </div>
					    <div class="col-xs-12 nopad">
						<div class="form-check">
						    <input type="checkbox" name="flightsCheckBox" value="1" id="flights1" class="form-check-input">
						    <label for="flights1" class="form-check-label">
							{{'Flights'|trans}}
						    </label>
						</div>
					    </div>
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input type="checkbox" name="hotelsCheckBox" value="1" id="hotels1" class="form-check-input">
                                                    <label for="hotels1" class="form-check-label">
                                                        {{'Hotels'|trans}}
                                                    </label>
                                                </div>
                                            </div>
                                            {% if SHOW_DEALS_BLOCK==1 %}
                                                <div class="col-xs-12 nopad">
                                                    <div class="form-check">
                                                        <input type="checkbox" name="attractionsCheckBox" value="1" id="attractions1" class="form-check-input">
                                                        <label for="attractions1" class="form-check-label">
                                                            {{'Attractions'|trans}}
                                                        </label>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>

                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by Status'|trans}}</p>
                                            </div>
                                        </div>
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input type="radio" name="statusradio" value="past" id="past1" class="">
                                                    <label for="past1" class="form-check-label">
                                                        {{'Past'|trans}}
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input type="radio" name="statusradio" value="cancelled" id="cancelled1" class="">
                                                    <label for="cancelled1" class="form-check-label">
                                                        {{'Cancelled'|trans}}
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 nopad">
                                                <div class="form-check">
                                                    <input type="radio" name="statusradio" value="upcoming" id="upcoming1" class="">
                                                    <label for="upcoming1" class="form-check-label">
                                                        {{'Upcoming'|trans}}
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="row no-margin margin_top_20">
                                    <div class="col-xs-12 nopad">
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <p class="leftmenue_subtitles"><i class="fas fa-angle-right fa-lg"></i>{{'by date'|trans}}</p>
                                            </div>
                                        </div>
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad">
                                                <div class="row no-margin">
                                                    <div id="fromContainer" class="col-xs-12 nopad mybookinginput pad17">
                                                        <input type="text" class="datepicker col-xs-12" id="fromDate" name="fromDateC" value="" placeholder="{{'from'|trans}}" autocomplete="off">
                                                    </div>
                                                </div>
                                                <div class="row no-margin">
                                                    <div id="toContainer" class="col-xs-12 nopad mybookinginput pad17">
                                                        <input type="text" class="datepicker col-xs-12" id="toDate" name="toDateC" value="" placeholder="{{'to'|trans}}" autocomplete="off">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row no-margin">
                                            <div class="col-xs-12 nopad pad17">
                                                <input type="hidden" name="start_pg" value="{{start}}">
                                                <input type="hidden" name="userId" value="{{userId}}">
                                                <input type="hidden" name="filterMyBookingUrl" value="{{ generateLangRoute(LanguageGet,'_my_bookings_filter_new') }}">
                                                <button id="searchButton" class="btn yellow_search_common_button">{{'Search'|trans}}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9 col-xs-12 right_panel">
                                <div id="my-bookings-results" class="row no-margin">
                                    {% include 'mybookings/my-bookings-info-new.twig' %}
                                </div>
                            </div>
                            <div class="pagination pagerWrapper" id="paginationPages">
                                {{pagination|raw}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
